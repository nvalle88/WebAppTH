@model bd.webappth.entidades.ViewModels.AccionPersonalViewModel

<input type="hidden" asp-for="IdAccionPersonal" />
<input type="hidden" asp-for="DatosBasicosEmpleadoViewModel.IdEmpleado" />

<fieldset>

    @{
        char[] MyChar = { ':' };
    }

    <div class="row">&nbsp;</div>

    <div class="row">

        <section class="col col-lg-4">

            <label class="input col-lg-12">Nombre del funcionario</label>
            <label class="input col-lg-12">
                <input type="text" asp-for="DatosBasicosEmpleadoViewModel.Nombres" class="form-control" readonly />
                <span asp-validation-for="DatosBasicosEmpleadoViewModel.Nombres" class="text-danger"></span>
            </label>

        </section>

        <section class="col col-lg-4">

            <label class="input col-lg-12">@Html.DisplayNameFor(model => Model.DatosBasicosEmpleadoViewModel.Identificacion).ToString().TrimEnd(MyChar)</label>
            <label class="input col-lg-12">
                <input type="text" asp-for="DatosBasicosEmpleadoViewModel.Identificacion" class="form-control" readonly />
                <span asp-validation-for="DatosBasicosEmpleadoViewModel.Identificacion" class="text-danger"></span>
            </label>

        </section>

        <section class="col-lg-4">
            <label class="input col-lg-12">@Html.DisplayNameFor(model => Model.TipoAccionPersonalViewModel)</label>
            <label class="input" style="padding-right:15px;">
                <select id="SelectAccion" asp-for="TipoAccionPersonalViewModel.IdTipoAccionPersonal" class="form-control" asp-items="ViewBag.TipoAcciones">
                    <option value="0" selected>Seleccione</option>
                </select>

                <span asp-validation-for="TipoAccionPersonalViewModel.IdTipoAccionPersonal" class="text-danger"></span>
            </label>
        </section>

    </div>

    <div class="row">&nbsp;</div>

    <div class="row">


        <section class="col col-lg-8">

            <label class="input col-lg-12">@Html.DisplayNameFor(model => Model.Solicitud)</label>
            <label class="input col-lg-12">
                <input type="text" asp-for="Solicitud" class="form-control" />
                <span asp-validation-for="Solicitud" class="text-danger"></span>
            </label>

        </section>

        <section class="col col-lg-4">
            <label class="input col-lg-12">@Html.DisplayNameFor(model => Model.Estado)</label>
            <label class="input">
                <select asp-for="Estado" class="form-control" asp-items="ViewBag.Estados">
                </select>

                <span asp-validation-for="Estado" class="text-danger"></span>
            </label>
        </section>

    </div>

    <div class="row">&nbsp;</div>

    <div class="row">

        <section class="col col-lg-8">
            <label class="input col-lg-12">@Html.DisplayNameFor(model => Model.Explicacion)</label>
            <label class="input col-lg-12">
                <textarea maxlength="1000" asp-for="Explicacion" class="form-control" rows="5" style="resize:none;"></textarea>
                <span asp-validation-for="Explicacion" class="text-danger"></span>
            </label>
        </section>


    </div>

    <div class="row">&nbsp;</div>

    <div class="row">
        <section class="col col-lg-12">
            <legend class="input col-lg-12">Generar movimiento de personal?</legend>
        </section>

        <section class="col col-lg-4">
            <div class="input col-lg-12">
                @Html.RadioButtonFor(x => x.GeneraMovimientoPersonal, false, new { onClick = "ValidarChkMovPersonal(this)", @id = "rdbFalse", @disabled = "disabled" })&nbsp;No
            </div>
        </section>

        <section class="col col-lg-4">
            <div class="input col-lg-12">
                @Html.RadioButtonFor(x => x.GeneraMovimientoPersonal, true, new { onClick = "ValidarChkMovPersonal(this)", @id = "rdbTrue", @disabled = "disabled" })&nbsp;Si
            </div>
            <input id="txtGenerarMovimiento" asp-for="GeneraMovimientoPersonal" type="text" hidden/>
        </section>

    </div>

    <div class="row">&nbsp;</div>

    <div class="row divSituacionActual">

        <section class="col col-lg-10 divSituacionActual">
            <legend class="input col-lg-12">Situaci&oacute;n actual</legend>
        </section>

        <section class="col col-lg-6 divSituacionActual">

            <label class="input col-lg-12">@Html.DisplayNameFor(model => Model.SituacionActualEmpleadoViewModel.NombreSucursal).ToString().TrimEnd(MyChar)</label>
            <label class="input col-lg-12">
                <input type="text" asp-for="SituacionActualEmpleadoViewModel.NombreSucursal" class="form-control" readonly />
                <span asp-validation-for="SituacionActualEmpleadoViewModel.NombreSucursal" class="text-danger"></span>
            </label>

        </section>

        <section class="col col-lg-6 divSituacionActual">

            <label class="input col-lg-12">@Html.DisplayNameFor(model => Model.SituacionActualEmpleadoViewModel.NombreDependencia).ToString().TrimEnd(MyChar)</label>
            <label class="input col-lg-12">
                <input type="text" asp-for="SituacionActualEmpleadoViewModel.NombreDependencia" class="form-control" readonly />
                <span asp-validation-for="SituacionActualEmpleadoViewModel.NombreDependencia" class="text-danger"></span>
            </label>

        </section>

        <section class="col col-lg-6 divSituacionActual">

            <label class="input col-lg-12">@Html.DisplayNameFor(model => Model.SituacionActualEmpleadoViewModel.NombreCargo).ToString().TrimEnd(MyChar)</label>
            <label class="input col-lg-12">
                <input type="text" asp-for="SituacionActualEmpleadoViewModel.NombreCargo" class="form-control" readonly />
                <span asp-validation-for="SituacionActualEmpleadoViewModel.NombreCargo" class="text-danger"></span>
            </label>

        </section>

        <section class="col col-lg-6 divSituacionActual">

            <label class="input col-lg-12">@Html.DisplayNameFor(model => Model.SituacionActualEmpleadoViewModel.Remuneracion).ToString().TrimEnd(MyChar)</label>
            <label class="input col-lg-12">
                <input type="text" asp-for="SituacionActualEmpleadoViewModel.Remuneracion" class="form-control" readonly />
                <span asp-validation-for="SituacionActualEmpleadoViewModel.Remuneracion" class="text-danger"></span>
            </label>

        </section>

    </div>

    <div class="row">&nbsp;</div>

    <div class="row divSituacionPropuesta">



        <section class="col col-lg-10 divSituacionPropuesta">
            <legend class="input col-lg-12">Situaci&oacute;n propuesta</legend>
        </section>

        <section class="col col-lg-12 divSituacionPropuesta" style="padding-left:2%;padding-right:2%;">
            <div class="jarviswidget jarviswidget-color-darken" id="wid-id-100" data-widget-editbutton="false" style="padding:0px;margin:0px;">
                <header id="table">
                    <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                    <h2>Lista &iacute;ndice ocupacional modalidad partida</h2>
                </header>

                <table id="datatable_fixed_column" class="table table-striped table-bordered table-hover">

                    <thead>
                        <tr>
                            <th class="hasinput">
                                <input type="text" class="form-control" />
                            </th>

                            <th class="hasinput">
