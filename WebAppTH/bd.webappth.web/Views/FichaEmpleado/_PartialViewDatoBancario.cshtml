@model bd.webappth.entidades.Negocio.DatosBancarios

<fieldset>
    <div class="row">

        <section class="col col-4">
            <label>Instituci&oacute;n financiera</label>
            <label class="input">
                <select asp-for="IdInstitucionFinanciera" class="form-control" asp-items="ViewBag.IdInstitucionFinanciera">
                    <option value="0"><Seleccione una @Html.DisplayNameFor(model => model.IdInstitucionFinanciera)></option>
