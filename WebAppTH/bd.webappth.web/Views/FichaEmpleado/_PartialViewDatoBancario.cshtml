                <input maxlength="20" asp-for="NumeroCuenta" class="form-control" placeholder="@Html.DisplayNameFor(model=>model.NumeroCuenta)" />
                <span asp-validation-for="NumeroCuenta" class="text-danger"></span>
            </label>
        </section>
        <section class="col-col-4">
                
                <label>Tipo de cuenta</label><br />
                <!--<input type="checkbox" asp-for="Ahorros" class="form-control" />-->
                <label>
                    Cuenta de ahorros @Html.RadioButtonFor(model => model.Ahorros, "true")
                    &nbsp;&nbsp;
                    Cuenta corriente @Html.RadioButtonFor(model => model.Ahorros, "false")
                </label>
        </section>
