@model bd.webappth.entidades.ViewModels.DiscapacidadSustitutoRequest


@using bd.webappth.entidades.Utils
@{ var modelo = new FichaEmpleado { OpcionMenu = 8 }; }

@{await Html.RenderPartialAsync("_PartialViewMenu", modelo);}

<br />
@using bd.webappth.entidades.Utils
@{ var modeloSustituto = new MenuDiscapacidadSustituto { OpcionMenu = 1, IdPersonaSustituto = Model.IdPersonaSustituto }; }
@{await Html.RenderPartialAsync("_PartialViewMenuPersonaSustituto", modeloSustituto);}

<link href="~/css/tabla/table.css" rel="stylesheet" />
<link rel="stylesheet" href="~/lib/waitMe/waitMe.css" />
<!-- MAIN CONTENT -->
<div id="content">

    <p></p>
    <a asp-action="CreateDiscapacidadSustituto" asp-route-id="@Model.IdPersonaSustituto">
        <button type="button" asp-action="CreateDiscapacidadSustituto" asp-route-id="@Model.IdPersonaSustituto" onclick="cargando()" asp-controller="FichaEmpleado" class="btn btn-labeled btn-default">
            <span class="btn-label">
                <i class="glyphicon glyphicon-plus"></i>
            </span>Nuevo

        </button>
    </a>
    <p> </p>

    <!-- widget grid -->
    <section id="" class="">
        <!-- row -->
        <div class="row">
            <!-- NEW WIDGET START -->
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-editbutton="false">
                    <!-- widget options:
                    usage: <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false">

                    data-widget-colorbutton="false"
                    data-widget-editbutton="false"
                    data-widget-togglebutton="false"
                    data-widget-deletebutton="false"
                    data-widget-fullscreenbutton="false"
                    data-widget-custombutton="false"
                    data-widget-collapsed="true"
                    data-widget-sortable="false"

                    -->
                    <header id="table">
                        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                        <h2>Discapacidades del sustituto</h2>
                    </header>
                    <!-- widget div-->
                    <div>
                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->
                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body no-padding">
                            <table id="dt_basic" class="table table-striped table-bordered table-hover" width="100%">
                                <thead>
                                    <tr>
                                        <th data-class="expand">
                                            Tipo de discapacidad
                                        </th>
                                        <th data-class="">
                                            N&uacute;mero de carnet
                                        </th>
                                        <th data-class="">
                                            Porciento
                                        </th>
                                        <th>
                                            <i class="fa fa-cog "></i>
                                            Opciones
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.ListaDiscapacidadSustitutos)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.NombreTipoDiscapacidad)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.NumeroCarnet)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.PorcentajeDiscapacidad)
                                            </td>
                                            <td>
                                                @Html.ActionLink("Editar", "EditDiscapacidadSustituto", new { id = item.IdDiscapacidadSustituto }, new { onclick = "cargando()" }) |
                                                @Html.ActionLink("Eliminar", "DeleteDiscapacidadSustituto", new { id = Model.IdPersonaSustituto ,idDiscapacidad=item.IdDiscapacidadSustituto}, new { onclick = "return confirm('Desea eliminar la Discapacidad... ?');" })
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->
                </div>

            </article>
            <!-- WIDGET END -->
        </div>
        <!-- end row -->
        <!-- end row -->
    </section>
    <!-- end widget grid -->
</div>
<!-- END MAIN CONTENT -->

@section Scripts {
    <script src='~/lib/waitMe/waitMe.min.js'></script>
    <script src='~/js/site.js'></script>
    <script type="text/javascript">
        function cargando() {
            mostrarLoadingPanel("content", "")
        }
    </script>
    <script src='~/js/datatables/init.js'></script>
}


