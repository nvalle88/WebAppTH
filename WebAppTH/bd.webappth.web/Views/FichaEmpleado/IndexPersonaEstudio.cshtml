@model List<bd.webappth.entidades.Negocio.PersonaEstudio>

@using bd.webappth.entidades.Utils
@{ var modelo = new FichaEmpleado { OpcionMenu = 1, }; }

@{await Html.RenderPartialAsync("_PartialViewMenu", modelo);}

<link href="~/css/tabla/table.css" rel="stylesheet" />
<link rel="stylesheet" href="~/lib/waitMe/waitMe.css" />
<!-- MAIN CONTENT -->
<div id="content">
    @{await Html.RenderPartialAsync("_PartialViewBotonIndexEmpleado");}
    <p></p>
    <a asp-action="CreatePersonaEstudio">
        <button type="button" asp-action="CreatePersonaEstudio" onclick="cargando()" asp-controller="FichaEmpleado" class="btn btn-labeled btn-default">
            <span class="btn-label">
                <i class="glyphicon glyphicon-plus"></i>
            </span>Nuevo

        </button>
    </a>
    <p> </p>
    <section id="" class="">
        <div class="row">
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-editbutton="false">
                    <header id="table">
                        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                        <h2>Formaci&oacute;nes acad&eacute;micas</h2>
                    </header>
                    <div>
                        <div class="jarviswidget-editbox">
                        </div>
                        <div class="widget-body no-padding">
                            <table id="datatable_fixed_column" class="table table-striped table-bordered table-hover" width="100%">
                                <thead>
                                    <tr>
                                        <th data-class="expand">
                                            Nivel de estudio
                                        </th>
                                        <th data-class="expand">
                                            &Aacute;rea de conocimiento
                                        </th>
                                        <th data-hide="phone">
                                            T&iacute;tulo
                                        </th>
                                        <th data-hide="phone">
                                            Fecha de graduación
                                        </th>
                                        <th data-hide="phone">
                                            No senescyt
                                        </th>
                                        <th data-hide="phone">
                                            Observaciones
                                        </th>
                                        <th>
                                            <i class="fa fa-cog "></i>
                                            Opciones
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Titulo.Estudio.Nombre)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Titulo.AreaConocimiento.Descripcion)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Titulo.Nombre)
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.FechaGraduado)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.NoSenescyt)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Observaciones)
                                            </td>
                                            <td>

                                                @Html.ActionLink("Editar", "EditPersonaEstudio", new { id = item.IdPersonaEstudio }, new { onclick = "cargando()" }) |
                                                @Html.ActionLink("Eliminar", "DeletePersonaEstudio", new { id = item.IdPersonaEstudio }, new { onclick = "return confirm('Desea eliminar el Estudio... ?');" })

                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->
                </div>

            </article>
            <!-- WIDGET END -->
        </div>
        <!-- end row -->
        <!-- end row -->
    </section>
    <!-- end widget grid -->
</div>
<!-- END MAIN CONTENT -->

@section Scripts {
    <script src='~/lib/waitMe/waitMe.min.js'></script>
    <script src='~/js/site.js'></script>

    <script type="text/javascript">
        function cargando() {
            mostrarLoadingPanel("content", "")
        }
    </script>
    <script src='~/js/datatables/init.js'></script>
}


