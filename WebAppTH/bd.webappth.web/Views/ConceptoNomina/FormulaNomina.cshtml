                            {
                                <div id="formula_todos_@(item.IdConceptoNomina)_@(item.IdRegimenLaboral)" class="row col-lg-12">
                                    <div class="col-lg-7">
                                        <h3 id="formula_@(item.IdConceptoNomina)_@(item.IdConceptoNomina)" class="margin-top-0"><a href="javascript:void(0);"> F&oacute;rmula </a><br><small class="font-xs"><i><a href="javascript:void(0);">@item.Formula</a></i></small></h3>
                                    </div>
                                    <div class="col-lg-4">
                                        <h3 id="regimen_@(item.IdConceptoNomina)_@(item.IdConceptoNomina)" class="margin-top-0"><a href="javascript:void(0);"> F&oacute;rmula </a><br><small class="font-xs"><i><a href="javascript:void(0);">@item.RegimenLaboral.Nombre</a></i></small></h3>
                                    </div>
                                    <div class="col-lg-1">
                                        <a id="eliminar_@(item.IdConceptoNomina)_@(item.IdConceptoNomina)"  href="javascript:void(0);" class="txt-color-redLight"><i class="fa fa-minus-square fa-lg"></i></a>
                                    </div>
                                    
                                    <div class="col-lg-12"> <legend></legend></div>
                                </div>
                            }

                        </div>
                    </div>
                </fieldset>
                <hr>
            </div>
        </div>

    </div>
