                        {
                            <a class="btn btn-success" href="javascript:void(0);"><i class="fa fa-check">&nbsp;&nbsp;ACTIVO </i>  </a>
                        }
                        else
                        {
                            <a class="btn btn-danger" href="javascript:void(0);"><i class="fa fa-check">&nbsp;&nbsp;INACTIVO </i> </a>
