@model bd.webappth.entidades.Negocio.ConceptoNomina
<fieldset>

    <div class="row">
        <section class="col col-2">
            <label>C&oacute;digo</label>
            <label class="input">
                <input maxlength="10" asp-for="Codigo" class="form-control" />
                <span asp-validation-for="Codigo" class="text-danger"></span>
            </label>
        </section>
        <section class="col col-lg-10">
            <label>Descripci&oacute;n</label>
            <label class="input">
                <input maxlength="100" asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </label>
        </section>
    </div>

    <div class="row">
        <section class="col col-lg-2">
            <label>Estado</label>
            <label class="input">
                <select id="estadoCombo" onclick="cambiarColor()" asp-for="Estatus" class="form-control">
                    <option value="ACTIVO" selected="selected">ACTIVO</option>
                    <option value="INACTIVO">INACTIVO</option>
                </select>
                <span asp-validation-for="Estatus" class="text-danger"></span>
                <i id="mensajeestado" class="label label-success col col-lg-12"></i>
            </label>
        </section>
        <section class="col col-lg-7">
            <label>Procesos</label>
            <div class="form-group">
                <select multiple style="width:100%;height:100%;" asp-for="ProcesosSeleccionados" asp-items="ViewBag.IdProceso" class="select2"></select>
                <span asp-validation-for="ProcesosSeleccionados" class="text-danger"></span>
            </div>
        </section>

        <section class="col col-3">
            <label>Tipo</label>
            <label class="input">
                <select asp-for="IdTipoConcepto" class="form-control" asp-items="ViewBag.IdTipoConcepto">
                    <option value="0" selected="selected">Seleccione</option>
                </select>
                <span asp-validation-for="IdTipoConcepto" class="text-danger"></span>
            </label>
        </section>


    </div>

    <div class="row">


    </div>
</fieldset>   