@model bd.webappth.entidades.ViewModels.ViewModelEvaluador
<link href="~/css/tabla/table.css" rel="stylesheet" />
@using bd.webappth.entidades.ViewModels
@{ var modelo = new ViewModelEvaluador { OpcionMenu = 2 }; }

@{await Html.RenderPartialAsync("_PartialViewMenu", modelo);}

@{
    ViewData["Title"] = "Create";
}

<div id="content">
    <section id="" class="">
        <div class="row">
            <div class="col col-10">

                @if (@ViewData["Error"].ToString() != "")

                {

                    <div class="col-lg-12">

                        <div class="alert alert-block alert-dismissable">

                            <a class="close" data-dismiss="alert" href="#"><p>X</p></a>

                            <h4 class="alert-heading"><i class="fa fa-check-square-o"></i>Informaci&oacute;n!</h4>

                            <p>

                                <span class="text-danger"><strong><bold> @ViewData["Error"]</bold></strong></span>

                            </p>

                        </div>

                    </div>

                }
            </div>
        </div>
        <div class="row">
            <article class="col-sm-12 col-md-12 col-lg-12">
                <div class="jarviswidget" id="wid-id-1" data-widget-editbutton="false" data-widget-custombutton="false">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2>Conocimiento</h2>
                    </header>
                    <div>
                        <div class="jarviswidget-editbox">
                        </div>
                        <div class="widget-body no-padding">
                            <form asp-action="ConocimientoEsenciales" id="ejemplo" class="smart-form" novalidate="novalidate">
                                    <div class="row">
                                        <section class="col col-lg-12">
                                            <br />
                                            <table id="datatable_fixed_column" class="table table-striped table-bordered table-hover" width="100%">
                                                <thead>
                                                    <tr>
                                                        <th data-hide="phone">
                                                            Conocimiento
                                                        </th>
                                                        <th data-hide="phone">
                                                            Nivel conocimiento
                                                            <input type="hidden" name="TotalConocimiento" value="@Model.TotalConocimiento" asp- class="form-control" readonly="readonly" />
                                                        </th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var item in Model.ListaConocimientos)
                                                    {
                                                        <tr>
                                                            <td hidden="hidden">
                                                                <input value="@item.IdAreaConocimiento" name="IdAreaConocimiento" type="hidden" asp- class="form-control" />
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.Descripcion)

                                                            </td>
                                                            <td>
                                                                <select asp-for="IdNivelConocimiento" name="ConocimientosEsenciales" class="form-control" id="IdNivelConocimiento" asp-items="ViewBag.IdNivelConocimiento">
                                                                    <option value="0" selected="selected" disabled=""></option>
                                                                </select>
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </section>
                                    </div>
                                
                                <!-- end widget content -->
                                <footer>
                                    <input type="submit" value="Guardar" class="btn btn-primary" />
                                    <a asp-action="Index" class="btn btn-default">Cancelar</a>
                                </footer>
                            </form>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>
@section Scripts {
    <script src='~/lib/waitMe/waitMe.min.js'></script>
    <script src='~/js/site.js'></script>
    <script type="text/javascript">
        function cargando() {
            mostrarLoadingPanel("content", "")
        }
    </script>

}

