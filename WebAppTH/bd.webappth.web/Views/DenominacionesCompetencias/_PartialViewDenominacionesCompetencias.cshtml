@model bd.webappth.entidades.Negocio.DenominacionCompetencia

<fieldset>
    <div class="row">
        <section class="col col-8">
            <label class="label">@Html.DisplayNameFor(model => model.Nombre)</label>
            <label class="input">
                <input maxlength="250" asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </label>
        </section>

        <section class="col col-4">
            <label class="label">Es competencia tecnica?</label>
            <label class="checkbox">
                <input type="checkbox" asp-for="CompetenciaTecnica" class="form-control">
                <i></i>
                <span asp-validation-for="CompetenciaTecnica" class="text-danger"></span>
            </label>
        </section>
    </div>
    <section>
        <label class="label">@Html.DisplayNameFor(model => model.Definicion)</label>
        <label class="textarea">
            <textarea maxlength="1000" asp-for="Definicion" rows="5"></textarea>
            <span asp-validation-for="Definicion" class="text-danger"></span>
        </label>
    </section>
</fieldset>


