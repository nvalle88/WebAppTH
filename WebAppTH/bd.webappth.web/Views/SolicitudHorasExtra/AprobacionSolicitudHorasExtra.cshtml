@model bd.webappth.entidades.Negocio.SolicitudHorasExtras

@{
    ViewData["Title"] = "SolicitudHorasExtras";
}


<!-- MAIN CONTENT -->
<div id="content">

    <!-- widget grid -->
    <section id="widget-grid" class="">

        <!-- START ROW -->
        <div class="row">
            <!-- NEW COL START -->
            <article class="col-sm-12 col-md-12 col-lg-12">
                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget" id="wid-id-1" data-widget-editbutton="false" data-widget-custombutton="false">

                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2>Solicitud Horas Extra</h2>
                    </header>
                    <!-- widget div-->
                    <div>

                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->

                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body no-padding">

                            <form asp-action="AprobarSolicitudHorasExtra" id="checkout-form" class="smart-form" novalidate="novalidate">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="IdEmpleado" />
                                <input type="hidden" asp-for="IdSolicitudHorasExtras" />
                                <input type="hidden" asp-for="Fecha" />
                                <input type="hidden" asp-for="FechaSolicitud" />
                                <input type="hidden" asp-for="CantidadHoras" />
                                <input type="hidden" asp-for="EsExtraordinaria" />
                                <fieldset>
                                    <div class="row">
                                        <section class="col col-4">
                                            <label class="input">
                                                <i class="icon-append fa fa-calendar"></i>
                                                <input value="@ViewData["Fecha"]" disabled="disabled" type="text" placeholder="Seleccione fecha" class="datepicker" data-dateformat='dd/mm/yy'>
                                            </label>
                                        </section>
                                        <section class="col col-4">
                                            <label class="input">
                                                <i class="icon-append fa fa-calendar"></i>
                                                <input value="@ViewData["FechaSolicitud"]" disabled="disabled" type="text" placeholder="Seleccione fecha solicitud" class="datepicker" data-dateformat='dd/mm/yy'>
                                            </label>
                                        </section>
                                        <section class="col col-4">
                                            <label class="input">
                                                <i class="icon-prepend fa fa-user"></i>
                                                <input maxlength="32" value="@ViewData["CantidadHoras"]" disabled="disabled" class="form-control" placeholder="@Html.DisplayNameFor(model=>model.CantidadHoras)" />
                                                <span asp-validation-for="CantidadHoras" class="text-danger"></span>
                                            </label>
                                        </section>

                                    </div>
                                    <div class="row">
                                        <div class="form-group">
                                            @*<label class="col-md-1 control-label">Estado</label>*@
                                            <div class="col col-8">
                                                <div class="col-md-2">
                                                    <label class="radio radio-inline">
                                                        <input type="radio" name="Estado" value="-1" class="radiobox">
                                                        <span>Negado</span>
                                                    </label>
                                                </div>
                                                <div class="col-md-2">
                                                    <label class="radio radio-inline">
                                                        <input type="radio" name="Estado" value="0" class="radiobox" checked="checked">
                                                        <span>Pendiente</span>
                                                    </label>
                                                </div>
                                                <div class="col-md-2">
                                                    <label class="radio radio-inline">
                                                        <input type="radio" name="Estado" value="1" class="radiobox">
                                                        <span>Aprobado</span>
                                                    </label>
                                                </div>
                                            </div>

                                            <section class="col col-4">
                                                <label class="checkbox">
                                                    <input type="checkbox" asp-for="EsExtraordinaria" disabled="disabled" class="form-control">
                                                    <i></i>Es hora extraordinaria ?
                                                    <span asp-validation-for="EsExtraordinaria" class="text-danger"></span>
                                                </label>
                                            </section>
                                        </div>
                                    </div>
                                    <br />
                                    <section>
                                        <label class="label"></label>
                                        <label class="textarea">
                                            <i class="icon-append fa fa-comment"></i>
                                            <textarea maxlength="250" asp-for="Observaciones" rows="3" placeholder="@Html.DisplayNameFor(model=>model.Observaciones)"></textarea>
                                            <span asp-validation-for="Observaciones" class="text-danger"></span>
                                        </label>
                                    </section>
                                    <span class="text-danger">@ViewData["Error"]</span>
                                </fieldset>
                                <footer>
                                    <input type="submit" value="Guardar" class="btn btn-primary" />
                                    <a asp-action="DetalleSolicitudHorasExtra"  asp-route-id="@Model.IdEmpleado" class="btn btn-default">Cancelar</a>
                                </footer>
                            </form>
                        </div>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->
                </div>
                <!-- end widget -->

            </article>

        </div>
        <!-- END ROW -->
    </section>
    <!-- end widget grid -->
    <!-- Modal -->

</div>
<!-- END MAIN CONTENT -->
@section Scripts {
    <script type="text/javascript">


    </script>
}




