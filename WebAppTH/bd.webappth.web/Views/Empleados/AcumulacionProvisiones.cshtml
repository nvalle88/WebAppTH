                                                            <span>SI</span>
                                                        </label>
                                                        <label class="radio radio-inline">
                                                            <input id="acumula_decimotercero_@item.IdEmpleado" type="radio" onclick="DesactivarDecimoTercero(@item.IdEmpleado)" class="radiobox" name="acumula_decimotercero_@item.IdEmpleado">
                                                            <span>NO</span>
                                                        </label>
                                                    </label>
                                                }
                                                else
                                                {
                                                    <legend class="text-center h6"><b>D&eacute;cimo tercero</b></legend>
                                                    <label class="text-align-center">
                                                        <label class="radio radio-inline">
                                                            <input id="acumula_decimotercero_@item.IdEmpleado" type="radio" class="radiobox"  onclick="ActivarDecimoTercero(@item.IdEmpleado)" name="acumula_decimotercero_@item.IdEmpleado">
                                                            <span>SI</span>
                                                        </label>
                                                        <label class="radio radio-inline">
                                                            <input id="acumula_decimotercero_@item.IdEmpleado" checked="checked" type="radio" onclick="DesactivarDecimoTercero(@item.IdEmpleado)" class="radiobox" name="acumula_decimotercero_@item.IdEmpleado">
                                                            <span>NO</span>
                                                        </label>
                                                    </label>
                                                }

                                                <legend class="text-center h6"><b>D&eacute;cimo cuarto</b></legend>
                                                @if (item.AcumulaDecimoCuarto == true)
                                                {
                                                <label class="radio radio-inline">
                                                    <input id="acumula_decimo_cuarto_@item.IdEmpleado" checked="checked" type="radio" class="radiobox" onclick="ActivarDecimoCuarto(@item.IdEmpleado)" name="acumula_decimo_cuarto_@item.IdEmpleado">
                                                    <span>SI</span>
                                                </label>
                                                    <label class="radio radio-inline">
                                                        <input id="acumula_decimo_cuarto_@item.IdEmpleado" onclick="DesactivarDecimoCuarto(@item.IdEmpleado)" type="radio" class="radiobox" name="acumula_decimo_cuarto_@item.IdEmpleado">
                                                        <span>NO</span>
                                                    </label>
                                                }
