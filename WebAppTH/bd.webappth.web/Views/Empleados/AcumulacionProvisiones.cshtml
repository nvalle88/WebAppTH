                                                        <tr>
                                                            <td>
                                                                <label class="text-center">
                                                                    <label class="radio radio-inline">
                                                                        <input type="radio" class="radiobox" @if (item.DerechoFondoReserva == true) { <text> checked="checked" </text> } value="true" onclick="ActivarDerechoFondoReserva(@item.IdEmpleado)" name="der_@(item.IdEmpleado)">
                                                                        <span>SI</span>
                                                                    </label>

                                                                    <label class="radio radio-inline">
                                                                        <input type="radio" class="radiobox" @if (item.DerechoFondoReserva == false) { <text> checked="checked" </text> } value="false" onclick="DesactivarDerechoFondoReserva(@item.IdEmpleado)" name="der_@(item.IdEmpleado)">
                                                                        <span>NO</span>
                                                                    </label>
                                                                </label>
                                                            </td>

                                                            <td>
                                                                <label class="text-center">
                                                                    <label class="radio radio-inline">
                                                                        <input type="radio" class="radiobox" @if (item.FondosReservas == true) { <text> checked="checked" </text> } value="true" onclick="ModalidadCuentaFondosReservas(@item.IdEmpleado)" name="fondoreserva_@(item.IdEmpleado)">
                                                                        <span>CUENTA</span>
                                                                    </label>

                                                                    <label class="radio radio-inline">
                                                                        <input type="radio" class="radiobox" @if (item.FondosReservas == false) { <text> checked="checked" </text> } value="false" onclick="ModalidadIESSFondosReservas(@item.IdEmpleado)" name="fondoreserva_@(item.IdEmpleado)">
                                                                        <span>IESS &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>
                                                                    </label>
                                                                 </label>
                                                            </td>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                            </td>
                                            <td>
