@model List<bd.webappth.entidades.ViewModels.DatosBasicosEmpleadoViewModel>

@{
    ViewData["Title"] = "Index";
}

<!-- MAIN CONTENT -->
<div id="content">

    <!-- widget grid -->
    <section id="" class="">
        <!-- row -->
        <div class="row">
            <!-- NEW WIDGET START -->
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-editbutton="false">
                    <!-- widget options:
                    usage: <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false">

                    data-widget-colorbutton="false"
                    data-widget-editbutton="false"
                    data-widget-togglebutton="false"
                    data-widget-deletebutton="false"
                    data-widget-fullscreenbutton="false"
                    data-widget-custombutton="false"
                    data-widget-collapsed="true"
                    data-widget-sortable="false"

                    -->
                    <header id="table">
                        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                        <h2>Empleados</h2>
                    </header>
                    <!-- widget div-->
                    <div>
                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->
                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body no-padding">
                            <table id="datatable_fixed_column" data-page-length="50" class="table table-striped table-bordered table-hover" width="100%">
                                <thead>
                                    <tr>
                                        <th data-class="expand">
                                            @Html.DisplayNameFor(model => model.FirstOrDefault().Identificacion)
                                        </th>

                                        <th data-class="expand">
                                            @Html.DisplayNameFor(model => model.FirstOrDefault().Nombres) y @Html.DisplayNameFor(model => model.FirstOrDefault().Apellidos)
                                        </th>

                                        <th data-hide="phone">
                                            Fondos de reserva
                                        </th>

                                        <th data-hide="phone">
                                           D&eacute;cimos
                                        </th>


                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr class="FondosReservasAcumulacionDecimos" id="@item.IdEmpleado" >
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Identificacion)
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.Nombres)  @Html.DisplayFor(modelItem => item.Apellidos)
                                            </td>
                                            <td >
                                                @if (item.DerechoFondoReserva == true)
                                                {
                                                    <legend class="text-center h6"><b>Tiene derecho</b></legend>
                                                    <label class="text-center  ">
                                                        <label class="radio radio-inline  ">
                                                            <input id="der_fr_@item.IdEmpleado" type="radio" class="radiobox  " checked="checked" value="true" onclick="ActivarDerechoFondoReserva(@item.IdEmpleado)" name="der_@item.IdEmpleado">
                                                            <span class=" " >SI</span>
                                                        </label>
                                                        <label class="radio radio-inline  ">
                                                            <input id="der_fr_@item.IdEmpleado" type="radio" onclick="DesactivarDerechoFondoReserva(@item.IdEmpleado)" class="radiobox  " name="der_@item.IdEmpleado">
                                                            <span class=" ">NO</span>
                                                        </label>
                                                    </label>
                                                }
                                                else
                                                {
                                                    <legend class="text-center h6 "><b>Tiene derecho</b></legend>
                                                    <label class="text-align-center  ">
                                                        <label class="radio radio-inline  ">
                                                            <input id="der_fr_@item.IdEmpleado" type="radio" class="radiobox  " onclick="ActivarDerechoFondoReserva(@item.IdEmpleado)" name="der_@item.IdEmpleado">
                                                            <span class=" ">SI</span>
                                                        </label>
                                                        <label class="radio radio-inline  ">
                                                            <input id="der_fr_@item.IdEmpleado" type="radio" onclick="DesactivarDerechoFondoReserva(@item.IdEmpleado)" checked="checked" class="radiobox  " name="der_@item.IdEmpleado">
                                                            <span class=" ">NO</span>
                                                        </label>
                                                    </label>

                                                }

                                                <legend class="text-center h6 "><b>Modalidad</b></legend>
                                                @if (item.FondosReservas == true)
                                                {
                                                    <label class="radio radio-inline  ">
                                                        <input id="mod_cta_@item.IdEmpleado" checked="checked" type="radio" class="radiobox" onclick="ModalidadCuentaFondosReservas(@item.IdEmpleado)" name="mod_@item.IdEmpleado">
                                                        <span>CUENTA</span>
                                                    </label>
                                                    <label class="radio radio-inline  ">
                                                        <input id="mod_cta_iess_@item.IdEmpleado" onclick="ModalidadIESSFondosReservas(@item.IdEmpleado)" type="radio" class="radiobox" name="mod_@item.IdEmpleado">
