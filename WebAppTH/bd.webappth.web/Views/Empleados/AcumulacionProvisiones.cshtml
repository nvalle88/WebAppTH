                                            <td>
                                                @Html.DisplayFor(modelItem => item.Nombres)  @Html.DisplayFor(modelItem => item.Apellidos)
                                            </td>
                                            <td>
                                                <table  class="table-striped table-bordered table-hover ">
                                                    <thead>
                                                        <tr>
                                                            <th data-hide="phone" class="text-align-center">
                                                                Tiene derecho
                                                            </th>

                                                            <th data-hide="phone" class="text-align-center">
                                                                Modalidad
                                                            </th>
                                                        </tr>
                                                    </thead>
