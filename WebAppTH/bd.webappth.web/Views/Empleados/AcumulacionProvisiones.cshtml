                                                {
                                                    <label class="radio radio-inline">
                                                        <input id="acumula_decimo_cuarto_@item.IdEmpleado"  type="radio" class="radiobox" onclick="ActivarDecimoCuarto(@item.IdEmpleado)" name="acumula_decimo_cuarto_@item.IdEmpleado">
                                                        <span>SI</span>
                                                    </label>
                                                    <label class="radio radio-inline">
                                                        <input id="acumula_decimo_cuarto_@item.IdEmpleado" checked="checked" onclick="DesactivarDecimoCuarto(@item.IdEmpleado)" type="radio" class="radiobox" name="acumula_decimo_cuarto_@item.IdEmpleado">
                                                        <span>NO</span>
                                                    </label>
                                                }

                                                <p></p>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->
                </div>

            </article>
            <!-- WIDGET END -->
        </div>
        <!-- end row -->
        <!-- end row -->
    </section>
    <!-- end widget grid -->
</div>
<!-- END MAIN CONTENT -->


