@model List<bd.webappth.entidades.ViewModels.ViewModelSeleccionPersonal>
<link href="~/css/tabla/table.css" rel="stylesheet" />
@using bd.webappth.entidades.ViewModels
@{ var modelo = new ViewModelSeleccionPersonal { OpcionMenu = 1 }; }

@{await Html.RenderPartialAsync("_PartialViewMenuInicio", modelo);}
@{
    ViewData["Title"] = "Planificación de puestos";
}

<div id="content">
    

    <p> </p>

    <!-- widget grid -->
    <section id="" class="">
        <!-- row -->
        <div class="row">
            <!-- NEW WIDGET START -->
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-editbutton="false">

                    <header id="table">
                        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                        <h2>Partida Vacantes</h2>
                    </header>
                    <!-- widget div-->
                    <div>
                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->
                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body no-padding">
                            <table id="datatable_fixed_column" class="table table-striped table-bordered table-hover" width="100%">
                                <thead>

                                    <tr>

                                        <th data-class="expand">
                                            @Html.DisplayNameFor(model => model.FirstOrDefault().NumeroPartidaGeneral)
                                        </th>
                                        <th data-class="expand">
                                            @Html.DisplayNameFor(model => model.FirstOrDefault().UnidadAdministrativa)
                                        </th>
                                        <th data-hide="phone">
                                            @Html.DisplayNameFor(model => model.FirstOrDefault().NumeroPartidaIndividual)
                                        </th>
                                        <th data-hide="phone">
                                            @Html.DisplayNameFor(model => model.FirstOrDefault().PuestoInstitucional)
                                        </th>
                                        <th data-hide="phone">
                                            @Html.DisplayNameFor(model => model.FirstOrDefault().grupoOcupacional)
                                        </th>
                                        <th data-hide="phone">
                                            @Html.DisplayNameFor(model => model.FirstOrDefault().NumeroPuesto)
                                        </th>
                                        <th data-hide="phone">
                                            @Html.DisplayNameFor(model => model.FirstOrDefault().Remuneracion)
                                        </th>
                                        <th>Opciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.NumeroPartidaGeneral)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.UnidadAdministrativa)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.NumeroPartidaIndividual)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.PuestoInstitucional)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.grupoOcupacional)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.NumeroPuesto)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Remuneracion)
                                            </td>

                                            <td>
                                                @if (item.NumeroPuesto == 0)
                                                {
                                                    @*<label>Habilitar</label>*@
                                                }
                                                else
                                                {
                                                    <text>
                                                        @Html.ActionLink("Postular", "Create", new { id = item.iddependecia, partida = item.IdPartidaFase })  |
                                                        @Html.ActionLink("Postulados", "IndexCandidatosPostulados", new { partida = item.IdPartidaFase })
                                                    </text>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->
                </div>

            </article>
            <!-- WIDGET END -->
        </div>
        <!-- end row -->
        <!-- end row -->
    </section>
    <!-- end widget grid -->
</div>
<!-- END MAIN CONTENT -->

@section Scripts {
    <script src='~/js/datatables/init.js'></script>
}
