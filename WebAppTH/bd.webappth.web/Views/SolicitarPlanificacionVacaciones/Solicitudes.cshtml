@model List<bd.webappth.entidades.ViewModels.SolicitudPlanificacionVacacionesViewModel>
<link href="~/css/tabla/table.css" rel="stylesheet" />

@{
    ViewData["Title"] = "Index";
}
<!-- MAIN CONTENT -->

@{await Html.RenderPartialAsync("_PartialViewMenu");}

<div id="content">

    <p></p>

    <!-- widget grid -->
    <section id="widget-grid" class="">
        <!-- row -->
        <div class="row">
            <!-- NEW WIDGET START -->
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-editbutton="false">
                    <!-- widget options:
                    usage: <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false">

                    data-widget-colorbutton="false"
                    data-widget-editbutton="false"
                    data-widget-togglebutton="false"
                    data-widget-deletebutton="false"
                    data-widget-fullscreenbutton="false"
                    data-widget-custombutton="false"
                    data-widget-collapsed="true"
                    data-widget-sortable="false"

                    -->
                    <header id="table">
                        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                        <h2>Solicitudes de planificaci&oacute;n de vacaciones
                        
                        @if(Model.FirstOrDefault() != null) { 

                            <text>
                                : &nbsp;@Model.FirstOrDefault().DatosBasicosEmpleadoViewModel.Nombres @Model.FirstOrDefault().DatosBasicosEmpleadoViewModel.Apellidos
                            </text>
                        }

                        </h2>
                    </header>
                    <!-- widget div-->
                    <div>
                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->
                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body no-padding">
                            <table id="datatable_fixed_column" class="table table-striped table-bordered table-hover" width="100%">
                                <thead>

                                    <tr>

                                        <th data-class="expand">
                                            @Html.DisplayNameFor(model => model.FirstOrDefault().FechaSolicitud)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.FirstOrDefault().FechaDesde)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.FirstOrDefault().FechaHasta)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.FirstOrDefault().Estado)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.FirstOrDefault().Observaciones)
                                        </th>
                                        <th>Opciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.FechaSolicitud)
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.FechaDesde)
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.FechaHasta)
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.NombreEstado)
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.Observaciones)
                                            </td>

                                            <td>
                                                @*@if (String.IsNullOrEmpty(item.Observaciones))
                                                {*@
                                                    @Html.ActionLink("Aprobar/Cambiar de estado", "Aprobar", new { id = item.IdSolicitudPlanificacionVacaciones })
                                                @*}*@
                                            </td>

                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->
                </div>

            </article>
            <!-- WIDGET END -->
        </div>
        <!-- end row -->
        <!-- end row -->
    </section>
    <!-- end widget grid -->
</div>
<!-- END MAIN CONTENT -->

@section Scripts {
    <script src='~/js/datatables/init.js'></script>

    <script>
        $("#btn_1").css("background-color", "#3276b1");
        $("#btn_1").css("color", "white");


        function espera() {

            mostrarLoadingPanel("content", "Cargando...");
        }

    </script>
}

