@model List<bd.webappth.entidades.Negocio.DistributivoHistorico>

@{
    ViewData["Title"] = "Index";
}
<link href="~/css/tabla/table.css" rel="stylesheet" />
<link rel="stylesheet" href="~/lib/waitMe/waitMe.min.css" />
<link rel="stylesheet" href="~/lib/waitMe/waitMe.css" />
<!-- MAIN CONTENT -->
<div id="content">



    <!-- widget grid -->
    <section id="" class="">
        <!-- row -->
        <div class="row">
            <!-- NEW WIDGET START -->
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-editbutton="false">
                    <!-- widget options:
                    usage: <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false">

                    data-widget-colorbutton="false"
                    data-widget-editbutton="false"
                    data-widget-togglebutton="false"
                    data-widget-deletebutton="false"
                    data-widget-fullscreenbutton="false"
                    data-widget-custombutton="false"
                    data-widget-collapsed="true"
                    data-widget-sortable="false"

                    -->
                    <header id="table">
                        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                        <h2>Empleados</h2>
                    </header>
                    <!-- widget div-->
                    <div>
                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->
                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body no-padding">
                            <table id="datatable_fixed_column" class="table table-striped table-bordered table-hover" width="100%">
                                <thead>
                                    <tr>
                                        <th data-class="expand">
                                            Identificaci&oacute;n
                                        </th>

                                        <th data-class="expand">
                                            Nombres y Apellidos
                                        </th>

                                        <th data-hide="phone">
                                            Relaci&oacute;n laboral
                                        </th>

                                        <th data-hide="phone">
                                            &Aacute;rea administrativa
                                        </th>

                                        <th data-hide="phone">
                                            Sucursal
                                        </th>

                                        <th data-hide="phone">
                                            Cargo
                                        </th>

                                        <th data-hide="phone">
                                            C&oacute;digo de contrato / N&uacute;mero de partida
                                        </th>

                                        <th>
                                            <i class="fa fa-cog "></i>
                                            Opciones
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Empleado.Persona.Identificacion)
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.Empleado.Persona.Nombres)
                                                &nbsp;
                                                @Html.DisplayFor(modelItem => item.Empleado.Persona.Apellidos)
                                            </td>
                                            
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TipoNombramiento.RelacionLaboral.Nombre)
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.IndiceOcupacionalModalidadPartida.Dependencia.Nombre)
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.IndiceOcupacionalModalidadPartida.Dependencia.Sucursal.Nombre)
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.IndiceOcupacionalModalidadPartida.IndiceOcupacional.DenominacionPuesto)
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.IndiceOcupacionalModalidadPartida.NumeroPartidaIndividual)
                                                @Html.DisplayFor(modelItem => item.IndiceOcupacionalModalidadPartida.CodigoContrato)
                                            </td>

                                            <td>
                                                @Html.ActionLink("Detalle", "CheckListDocumentosEmpleado", new { id = item.IdEmpleado},new { onclick = "cargando()" } )
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->
                </div>

            </article>
            <!-- WIDGET END -->
        </div>
        <!-- end row -->
        <!-- end row -->
    </section>
    <!-- end widget grid -->
</div>
<!-- END MAIN CONTENT -->

@section Scripts {
    <script src='~/lib/waitMe/waitMe.min.js'></script>
    <script src='~/js/site.js'></script>
    <script type="text/javascript">
        function cargando() {
            mostrarLoadingPanel("content", "")
        }
    </script>

    <script src='~/js/datatables/init.js'></script>
}

