            <label class="input">
                <select asp-for="IdManualPuesto" class="form-control" asp-items="ViewBag.ManualPuesto">
                    <option id="0">Seleccione</option>
                </select>
                <span asp-validation-for="IdManualPuesto" class="text-danger"></span>
            </label>
        </section>

