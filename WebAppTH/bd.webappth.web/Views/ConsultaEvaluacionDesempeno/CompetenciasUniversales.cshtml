@model bd.webappth.entidades.ViewModels.ViewModelEvaluador
<link href="~/css/tabla/table.css" rel="stylesheet" />
@using bd.webappth.entidades.ViewModels
@{ var modelo = new ViewModelEvaluador { OpcionMenu = 4 }; }

@{await Html.RenderPartialAsync("_PartialViewMenu", modelo);}

@{
    ViewData["Title"] = "Create";
}

<div id="content">
    <section id="" class="">
        <div class="row">
            <div class="col col-10">

                @if (@ViewData["Error"].ToString() != "")

                {

                    <div class="col-lg-12">

                        <div class="alert alert-block alert-dismissable">

                            <a class="close" data-dismiss="alert" href="#"><p>X</p></a>

                            <h4 class="alert-heading"><i class="fa fa-check-square-o"></i>Informaci&oacute;n!</h4>

                            <p>

                                <span class="text-danger"><strong><bold> @ViewData["Error"]</bold></strong></span>

                            </p>

                        </div>

                    </div>

                }
            </div>
        </div>
        <div class="row">
            <article class="col-sm-12 col-md-12 col-lg-12">
                <div class="jarviswidget" id="wid-id-1" data-widget-editbutton="false" data-widget-custombutton="false">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2>Competencias Universales</h2>
                    </header>
                    <div>
                        <div class="jarviswidget-editbox">
                        </div>
                        <div class="widget-body no-padding">
                            <form asp-action="CompetenciasUniversales" id="ejemplo" class="smart-form" novalidate="novalidate">
                                <div class="row">
                                    <section class="col col-lg-12">
                                        <br />
                                        <table id="datatable_fixed_column" class="table table-striped table-bordered table-hover" width="100%">
                                            <thead>
                                                <tr>
                                                    <th data-hide="phone">
                                                        Destreza
                                                    </th>
                                                    <th data-hide="phone">
                                                        Relevancia
                                                    </th>
                                                    <th data-hide="phone">
                                                        Comportamiento observable
                                                    </th>
                                                    <th data-hide="phone">
                                                        Frecuencia de Aplicacion
                                                    </th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model.ListaCompetenciasUniversales)
                                                {
                                                    <tr>
                                                        <td hidden="hidden">
                                                            <input value="@item.IdComportamientoObservable" name="IdComportamientoObervable" type="hidden" asp- class="form-control" />
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.NombreDenominacionCompetencia)

                                                        </td>

                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.NombreNivel)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Descripcion)
                                                        </td>
                                                        <td>
                                                            <select asp-for="IdFrecuenciaAplicacion" name="IdFrecuenciaAplicaciones" class="form-control" id="IdNivelConocimiento" asp-items="ViewBag.IdFrecuenciaAplicacion">
                                                                <option value="0" selected="selected" disabled=""></option>
                                                            </select>
                                                        </td>

                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </section>
                                </div>
                                <!-- end widget content -->
                                <footer>
                                    <input type="submit" value="Guardar" class="btn btn-primary" />
                                    <a asp-action="Index" class="btn btn-default">Cancelar</a>
                                </footer>
                            </form>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>

@section Scripts {
    <script src='~/lib/waitMe/waitMe.min.js'></script>
    <script src='~/js/site.js'></script>
    <script type="text/javascript">
        function cargando() {
            mostrarLoadingPanel("content", "")
        }
    </script>

    <script src='~/js/datatables/init.js'></script>
}

