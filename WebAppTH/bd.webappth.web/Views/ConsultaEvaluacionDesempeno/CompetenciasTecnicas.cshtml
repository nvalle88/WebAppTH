@model List<bd.webappth.entidades.Negocio.EvaluacionCompetenciasTecnicasPuesto>
<link href="~/css/tabla/table.css" rel="stylesheet" />

@{await Html.RenderPartialAsync("_PartialViewMenu");}

@{
    ViewData["Title"] = "Create";
}

<div id="content">
    <section id="" class="">

        <div class="row">
            <article class="col-sm-12 col-md-12 col-lg-12">
                <div class="jarviswidget" id="wid-id-1" data-widget-editbutton="false" data-widget-custombutton="false">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2>Competencias tecnicas del puesto</h2>
                    </header>
                    <div>
                        <div class="jarviswidget-editbox">
                        </div>
                        <div class="widget-body no-padding">
                            <form asp-action="CompetenciasTecnicas" id="ejemplo" class="" novalidate="novalidate">
                                <div class="row">
                                    <section class="col col-lg-12">
                                        <br />
                                        <table id="datatable_fixed_column" class="table table-striped table-bordered table-hover" width="100%">
                                            <thead>
                                                <tr>
                                                    <th data-hide="phone">
                                                        Destreza
                                                    </th>
                                                    <th data-hide="phone">
                                                        Relevancia
                                                    </th>
                                                    <th data-hide="phone">
                                                        Comportamiento observable
                                                    </th>
                                                    <th data-hide="phone">
                                                        NIvel de desarrollo
                                                    </th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model)
                                                {
                                                    <tr>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.ComportamientoObservable.DenominacionCompetencia.Nombre)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.ComportamientoObservable.Nivel.Nombre)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.ComportamientoObservable.Descripcion)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.NivelDesarrollo.Nombre)
                                                        </td>

                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </section>
                                </div>

                                <div class="smart-form">
                                    <footer>
                                        <input type="submit" value="Guardar" class="btn btn-primary" />
                                        <a asp-action="Index" class="btn btn-default">Cancelar</a>
                                    </footer>
                                    <!-- end widget content -->
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>

@section Scripts {
    <script src='~/lib/waitMe/waitMe.min.js'></script>
    <script src='~/js/site.js'></script>
    <script type="text/javascript">
        function cargando() {
            mostrarLoadingPanel("content", "")
        }
    </script>
    <script>
        $("#btn_3").css("background-color", "#3276b1");
        $("#btn_3").css("color", "white");

    </script>

    <script src='~/js/datatables/init.js'></script>
}

