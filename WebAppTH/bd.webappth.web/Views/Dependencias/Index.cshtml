@model List<bd.webappth.entidades.ViewModels.DependenciaViewModel>

    @{
    ViewData["Title"] = "Index";
    }
<link href="~/css/tabla/table.css" rel="stylesheet" />
    <!-- MAIN CONTENT -->
<div id="content">
    <div class="col col-10">

        @if (@ViewData["Error"].ToString() != "")

        {

            <div class="col-lg-12">

                <div class="alert alert-block alert-dismissable">

                    <a class="close" data-dismiss="alert" href="#"><p>X</p></a>

                    <h4 class="alert-heading"><i class="fa fa-check-square-o"></i>Informaci&oacute;n!</h4>

                    <p>

                        <span class="text-danger"><strong><bold> @ViewData["Error"]</bold></strong></span>

                    </p>

                </div>

            </div>

        }
    </div>
    <p></p>
    <a asp-action="Create">
        <button type="button" asp-action="Create" class="btn btn-labeled btn-default">
            <span class="btn-label">
                <i class="glyphicon glyphicon-plus"></i>
            </span>Nuevo

        </button>
    </a>
    <p> </p>

    <section id="" class="">
        <div class="row">
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-editbutton="false">
                    <header id="table">
                        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                        <h2>Estructura org&aacute;nica</h2>
                    </header>
                    <div>
                        <div class="jarviswidget-editbox">
                        </div>
                        <div class="widget-body no-padding">
                            <table id="datatable_fixed_column" class="table table-striped table-bordered table-hover" width="100%">
                                <thead>
                                  
                                    <tr>
                                        <th data-class="expand">
                                            @Html.DisplayNameFor(model => model.FirstOrDefault().Codigo)

                                        </th>
                                        <th data-class="expand">
                                            @Html.DisplayNameFor(model => model.FirstOrDefault().NombreSucursal)

                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.FirstOrDefault().NombreDependenciaPadre)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.FirstOrDefault().NombreDependencia)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.FirstOrDefault().NombreProceso)
                                        </th>
                                        <th>
                                            Opciones
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Codigo)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.NombreSucursal)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.NombreDependenciaPadre)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.NombreDependencia)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.NombreProceso)
                                        </td>
                                        <td>
                                            @Html.ActionLink("Editar", "Edit", new { id = item.IdDependencia }) |
                                            @Html.ActionLink("Deshabilitar", "Delete", new { id = item.IdDependencia }, new { onclick = "return confirm('Esta seguro que desea deshabilitar... ?');" })
                                        </td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>
    @section Scripts {
        <script src='~/js/datatables/init.js'></script>
    }

