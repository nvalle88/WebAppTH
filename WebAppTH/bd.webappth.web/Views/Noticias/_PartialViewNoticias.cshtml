@model bd.webappth.entidades.Negocio.Noticia

<fieldset>
    <div class="row">
        <section class="col col-8">
           
            <div class="col-lg-5">
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                    <input asp-for="Fecha" type="text" data-dateformat='dd/mm/yy' class="form-control input datepicker " placeholder="Fecha " data-msg-required='El campo es requerido' data-rule-required='true'>
                </div>
            </div>
        </section>
    </div>
    <br />
    <div class="row">
        <section class="col col-8">
            <label class="input">
                <i class="icon-prepend fa fa-user"></i>
                <input maxlength="250" asp-for="Titulo" class="form-control" placeholder="@Html.DisplayNameFor(model=>model.Titulo)" />
                <span class="nombreErr text-danger"></span>
            </label>
        </section>
    </div>
  
        <section>


            <div class="row">
                <section class="col col-8">
                    <label class="textarea">
                        <i class="icon-append fa fa-comment"></i>
                        <textarea asp-for="Descripcion" rows="8" placeholder="@Html.DisplayNameFor(model=>model.Descripcion)"></textarea>
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                    </label>
                </section>
            </div>
            <div class="input input-file">
                <span class="button"><input  id="file" type="file" name="files" onchange="this.parentNode.nextSibling.value = this.value">Buscar</span><input type="text" placeholder="Seleccione un archivo" readonly="">
            </div>
            <span class="errorDiv text-danger">Archivos permitidos extensi&oacute;n .jpg y tama&ntilde;o m&aacute;ximo de de 180 x 180 p&iacutexeles</span>
        </section>
        <span class="text-danger">@ViewData["Error"]</span>
</fieldset>

