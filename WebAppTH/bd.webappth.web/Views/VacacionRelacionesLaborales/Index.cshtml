@model List<bd.webappth.entidades.Negocio.VacacionRelacionLaboral>
<link href="~/css/tabla/table.css" rel="stylesheet" />

@{
    ViewData["Title"] = "Index";
}



<div id="content">


    <p></p>
    <a asp-action="Create" onclick="espera()">
        <button type="button" asp-action="Create" class="btn btn-labeled btn-default">
            <span class="btn-label">
                <i class="glyphicon glyphicon-plus"></i>
            </span>Nuevo

        </button>
    </a>
    <p> </p>


    <section id="widget-grid" class="">
        <div class="row">
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-editbutton="false">
                    <header id="table">
                        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                        <h2>Vacaciones por relaci&oacute;n laboral</h2>
                    </header>
                    <div>
                        <div class="jarviswidget-editbox"></div>
                        <div class="widget-body no-padding">
                            <table id="datatable_fixed_column" class="table table-striped table-bordered table-hover" style="width:100%;">
                                <thead>

                                    <tr>
                                        <td>
                                            @Html.DisplayNameFor(model=>model.FirstOrDefault().RelacionLaboral.Nombre)
                                        </td>

                                        <td>
                                            @Html.DisplayNameFor(model=>model.FirstOrDefault().MinAcumulacionDias)
                                        </td>

                                        <td>
                                            @Html.DisplayNameFor(model=>model.FirstOrDefault().MaxAcumulacionDias)
                                        </td>

                                        <td>
                                            @Html.DisplayNameFor(model=>model.FirstOrDefault().IncrementoDiasPorPeriodoFiscal)
                                        </td>

                                        <td>
                                            @Html.DisplayNameFor(model=>model.FirstOrDefault().IncrementoApartirPeriodoFiscal)
                                        </td>
                                        <th>Opciones</th>
                                    </tr>

                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.RelacionLaboral.Nombre)
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.MinAcumulacionDias)
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.MaxAcumulacionDias)
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.IncrementoDiasPorPeriodoFiscal)
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.IncrementoApartirPeriodoFiscal)
                                            </td>

                                            <td>
                                                @Html.ActionLink("Editar", "Edit", new { id = item.IdVacacionRelacionLaboral, onClick ="espera()"}) |
                                                @Html.ActionLink("Eliminar", "Delete", new { id = item.IdVacacionRelacionLaboral}, new { onclick = "return confirm('Desea eliminar el registro... ?');" })
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>
@section Scripts {
    <script src='~/js/datatables/init.js'></script>
    <script>
        function espera() {

            mostrarLoadingPanel("content", "Cargando...");
        }

    </script>
}