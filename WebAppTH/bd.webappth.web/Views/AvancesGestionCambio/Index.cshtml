@model bd.webappth.entidades.ViewModels.AvanceGestionCambioViewModel

@{
    ViewData["Title"] = "Index";

}

<p></p>
<link href="~/js/tabla/table.css" rel="stylesheet" />
@Html.ActionLink("Nuevo Avance de Gestion de Cambio", "Create", "AvancesGestionCambio", new { IdActividadesGestionCambio = Model.IdActividadesGestionCambio }, new { @class = "btn btn-primary" })

@Html.ActionLink("Regresar a Actividad de Gestion de Cambio", "Index", "ActividadesGestionCambio", new { IdActividadesGestionCambio = Model.IdActividadesGestionCambio }, new { @class = "btn btn-primary" })


<p> </p>
			<!-- MAIN CONTENT -->
<div id="content">
   
    <!-- widget grid -->
    <section id="" class="">
        <!-- row -->
        <div class="row">

            <!-- NEW WIDGET START -->
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-editbutton="false">
                    <!-- widget options:
                    usage: <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false">

                    data-widget-colorbutton="false"
                    data-widget-editbutton="false"
                    data-widget-togglebutton="false"
                    data-widget-deletebutton="false"
                    data-widget-fullscreenbutton="false"
                    data-widget-custombutton="false"
                    data-widget-collapsed="true"
                    data-widget-sortable="false"

                    -->
                    <header id="table">
                        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                        <h2>Avance de Gesti&oacuten de cambio</h2>
                    </header>
                    <!-- widget div-->
                    <div>
                        
                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->
                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body no-padding">
                            <table id="datatable_fixed_column" class="table table-striped table-bordered table-hover" width="100%">
                                <thead>
                                    
                                    <tr>
                                        <th data-class="expand">
                                            @Html.DisplayNameFor(model => model.ListaAvancesGestionCambio.FirstOrDefault().Fecha)
                                        </th>
                                        <th data-class="expand">
                                            @Html.DisplayNameFor(model => model.ListaAvancesGestionCambio.FirstOrDefault().Indicadorreal)
                                        </th>
                                        
                                        <th>Opciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.ListaAvancesGestionCambio)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Fecha)
                                            </td>
                                           
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Indicadorreal)
                                            </td>
                                           
                                            <td>
                                                @Html.ActionLink("Editar", "Edit", new { id = item.IdAvanceGestionCambio }) |
                                                @Html.ActionLink("Eliminar", "Delete", new { IdAvanceGestionCambio = item.IdAvanceGestionCambio, IdActividadesGestionCambio =  item.IdActividadesGestionCambio }, new { onclick = "return confirm('Desea eliminar el avance de gestion de cambio... ?');" })
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->
                </div>
          
            </article>
            <!-- WIDGET END -->
        </div>
        <!-- end row -->
        <!-- end row -->
    </section>
    <!-- end widget grid -->
</div>
<!-- END MAIN CONTENT -->

 @section Scripts {
    <script src='~/js/datatables/init.js'></script>
}

