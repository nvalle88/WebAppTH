@model bd.webappth.entidades.Negocio.ItemViatico
<fieldset>
    <div class="row">
        <section class="col col-8">
            <label class="label">@Html.DisplayNameFor(model => model.Descripcion)</label>
            <label class="input">
                <input maxlength="32" asp-for="Descripcion" class="form-control" placeholder="@Html.DisplayNameFor(model=>model.Descripcion)" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </label>
        </section>
        <section class="col col-2">
            <label class="label">@Html.DisplayNameFor(model => model.Reliquidacion)</label>
            <label class="checkbox">
                <input type="checkbox" asp-for="Reliquidacion" />
                <input type="hidden" name="Automatico" value="false" checked="checked" />
                <i></i>
            </label>
        </section>
    </div>
    
</fieldset>