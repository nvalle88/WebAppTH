@model bd.webappth.entidades.Negocio.GestionPlanCapacitacion

@{
    ViewData["Title"] = "brigadasSSO";
}

<link rel="stylesheet" href="~/lib/select2/dist/css/select2.min.css" />
<div id="content">
    <section id="" class="">
        <div class="row">
            <article class="col-sm-12 col-md-12 col-lg-12">
                <div class="jarviswidget" id="wid-id-1" data-widget-editbutton="false" data-widget-custombutton="false">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2>Editar gesti&oacute;n Capacitaciones</h2>
                    </header>
                    <div>
                        <div class="jarviswidget-editbox">
                        </div>
                        <div class="widget-body no-padding">
                            <form asp-action="Edit" id="checkout-form" class="smart-form" novalidate="novalidate">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="IdGestionPlanCapacitacion" />
                                <input type="hidden" asp-for="Anio" value="@DateTime.Now.Year" />
                                <input type="hidden" asp-for="Estado" value="1" />
                                @{await Html.RenderPartialAsync("_PartialViewGestionPlanCapacitacion");}
                                <footer>
                                    <button type="submit" class="btn btn-default" id="btn-guardar">Actualizar</button>
                                    <a asp-action="Index" onclick="cargando()" class="btn btn-default">Cancelar</a>
                                </footer>
                            </form>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script src='~/lib/select2/dist/js/select2.min.js'></script>
    <script src='~/lib/select2/dist/js/i18n/es.js'></script>
    <script src='~/js/site.js'></script>
    <script type="text/javascript">
        $(document).ready(function () {
            Init_Select2();
        });
    </script>

        <script type="text/javascript">

            function OcultarSuma() {

                if ($("#Suma").prop('checked')) {
                $("#Suma").prop("checked", false);
            }

            }
            function OcultarResta() {

                if ($("#Resta").prop('checked')) {
                $("#Resta").prop("checked", false);
            }


            }
    </script>

}