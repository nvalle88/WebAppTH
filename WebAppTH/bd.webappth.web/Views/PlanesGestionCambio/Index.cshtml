@model List<bd.webappth.entidades.Negocio.PlanGestionCambio>

@{
    ViewData["Title"] = "Index";
}

<p></p>
<a asp-action="Create">
    <button type="button" asp-action="Create" class="btn btn-labeled btn-default">
        <span class="btn-label">
            <i class="glyphicon glyphicon-plus"></i>
        </span>Nuevo Plan de Gesti&oacuten de Cambio
    </button>
</a>
<p> </p>
			<!-- MAIN CONTENT -->
<div id="content">
   
    <!-- widget grid -->
    <section id="widget-grid" class="">
        <!-- row -->
        <div class="row">
            <!-- NEW WIDGET START -->
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-editbutton="false">
                    <!-- widget options:
                    usage: <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false">

                    data-widget-colorbutton="false"
                    data-widget-editbutton="false"
                    data-widget-togglebutton="false"
                    data-widget-deletebutton="false"
                    data-widget-fullscreenbutton="false"
                    data-widget-custombutton="false"
                    data-widget-collapsed="true"
                    data-widget-sortable="false"

                    -->
                    <header>
                        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                        <h2>Plan de Gesti&oacuten de Cambio</h2>
                    </header>
                    <!-- widget div-->
                    <div>
                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->
                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body no-padding">
                            <table id="dt_basic" class="table table-striped table-bordered table-hover" width="100%">
                                <thead>
                                    <tr>
                                        <th data-class="expand">
                                            @Html.DisplayNameFor(model => model.FirstOrDefault().Titulo)
                                        </th>
                                        <th data-hide="phone">
                                            @Html.DisplayNameFor(model => model.FirstOrDefault().Descripcion)
                                        </th>
                                        <th data-hide="phone">
                                            @Html.DisplayNameFor(model => model.FirstOrDefault().FechaInicio)
                                        </th>
                                        <th data-hide="phone">
                                            @Html.DisplayNameFor(model => model.FirstOrDefault().FechaFin)
                                        </th>
                                        <th data-hide="phone">
                                            @Html.DisplayNameFor(model => model.FirstOrDefault().RealizadoPor)
                                        </th>
                                        <th data-hide="phone">
                                            @Html.DisplayNameFor(model => model.FirstOrDefault().AprobadoPor)
                                        </th>
                                        <th>Opciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Titulo)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Descripcion)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.FechaInicio)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.FechaFin)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.EmpleadoRealizadoPor.Persona.Nombres)
                                                @Html.DisplayFor(modelItem => item.EmpleadoRealizadoPor.Persona.Apellidos)

                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.EmpleadoAprobadoPor.Persona.Nombres)
                                                @Html.DisplayFor(modelItem => item.EmpleadoAprobadoPor.Persona.Apellidos)
                                            </td>
                                            <td>
                                                @Html.ActionLink("Editar", "Edit", new { id = item.IdPlanGestionCambio }) |
                                                @Html.ActionLink("Detalle", "Index", "ActividadesGestionCambio", new { idPlanGestionCambio = item.IdPlanGestionCambio })|
                                                @Html.ActionLink("Eliminar", "Delete", new { id = item.IdPlanGestionCambio }, new { onclick = "return confirm('Desea eliminar el plan gestion cambio... ?');" })
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->
                </div>
          
            </article>
            <!-- WIDGET END -->
        </div>
        <!-- end row -->
        <!-- end row -->
    </section>
    <!-- end widget grid -->
</div>
<!-- END MAIN CONTENT -->

 @section Scripts {
    <script src='~/js/datatables/init.js'></script>
}

