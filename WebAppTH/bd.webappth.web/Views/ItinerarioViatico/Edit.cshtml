@model bd.webappth.entidades.Negocio.ItinerarioViatico

@{
    ViewData["Title"] = "ItinerarioViatico";
}


<!-- MAIN CONTENT -->
<div id="content">
    <div class="col col-10">

        @if (@ViewData["Error"].ToString() != "")

        {

            <div class="col-lg-12">

                <div class="alert alert-block alert-dismissable">

                    <a class="close" data-dismiss="alert" href="#"><p>X</p></a>

                    <h4 class="alert-heading"><i class="fa fa-check-square-o"></i>Informaci&oacute;n!</h4>

                    <p>

                        <span class="text-danger"><strong><bold> @ViewData["Error"]</bold></strong></span>

                    </p>

                </div>

            </div>

        }
    </div>
    <!-- widget grid -->
    <section id="widget-grid" class="">

        <!-- START ROW -->
        <div class="row">
            <!-- NEW COL START -->
            <article class="col-sm-12 col-md-12 col-lg-12">
                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget" id="wid-id-1" data-widget-editbutton="false" data-widget-custombutton="false">

                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2>Editar Itinerario</h2>
                    </header>
                    <!-- widget div-->
                    <div>

                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->
                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body no-padding">

                            <form id="wizard-1" asp-action="Edit" novalidate="novalidate" class="smart-form">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="IdItinerarioViatico" />
                                <input type="hidden" asp-for="IdSolicitudViatico" />
                                <fieldset>
                                    @{await Html.RenderPartialAsync("_PartialViewItinerarioViatico");}
                                </fieldset>
                                <footer>
                                    <input type="submit" value="Guardar" class="btn btn-primary" />
                                    <a asp-action="Index" asp-route-IdSolicitudViatico="@Model.IdSolicitudViatico" class="btn btn-default">Cancelar</a>
                                </footer>
                            </form>
                        </div>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->
                </div>
                <!-- end widget -->

            </article>

        </div>
        <!-- END ROW -->
    </section>
    <!-- end widget grid -->
    <!-- Modal -->

</div>
<!-- END MAIN CONTENT -->

@section Scripts {

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="text/javascript">
        $(document).ready(function () {
            Init_Select2();
        });
    </script>
    <script type="text/javascript">
    $(document).ready(function () {
           $("#paisorigen").change(function () {
            mostrarLoadingPanel("content","Cargando...")
               $("#provinciaorigen").empty();
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("ListarProvinciaPorPais")',
                    dataType: 'json',
                    data: { pais: $("#paisorigen").val() },
                    success: function (data) {
                        $.each(data, function (i, data) {
                            $("#provinciaorigen").append('<option value="'
                                + data.idProvincia + '">'
                                + data.nombre + '</option>');

                        });
                    }, complete: function (data) {
                        $("#content").waitMe("hide");
                    },

                    error: function (ex) {
                        alert('Failed to retrieve data.' + ex);
                    }
                });
                return false;
                })
            $("#paisdestino").change(function () {
            mostrarLoadingPanel("content","Cargando...")
                $("#provinciadestino").empty();
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("ListarProvinciaPorPais")',
                    dataType: 'json',
                    data: { pais: $("#paisdestino").val() },
                    success: function (data) {
                        $.each(data, function (i, data) {
                            $("#provinciadestino").append('<option value="'
                                + data.idProvincia + '">'
                                + data.nombre + '</option>');

                        });
                    }, complete: function (data) {
                        $("#content").waitMe("hide");
                    },

                    error: function (ex) {
                        alert('Failed to retrieve data.' + ex);
                    }
                });
                return false;
                })



            $("#provinciaorigen").change(function () {
            mostrarLoadingPanel("content","Cargando...")
            $("#ciudadorigen").empty();
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("ListarCiudadPorProvincia")',
                    dataType: 'json',
                    data: { provincia: $("#provinciaorigen").val() },
                    success: function (data) {
                        $.each(data, function (i, data) {
                            $("#ciudadorigen").append('<option value="'
                                + data.idCiudad + '">'
                                + data.nombre + '</option>');

                        });
                    }, complete: function (data) {
                        $("#content").waitMe("hide");
                    },

                    error: function (ex) {
                        alert('Failed to retrieve data.' + ex);
                    }
                });
                return false;
            })

         $("#provinciadestino").change(function () {
            mostrarLoadingPanel("content","Cargando...")
            $("#ciudaddestino").empty();
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("ListarCiudadPorProvincia")',
                    dataType: 'json',
                    data: { provincia: $("#provinciadestino").val() },
                    success: function (data) {
                        $.each(data, function (i, data) {
                            $("#ciudaddestino").append('<option value="'
                                + data.idCiudad + '">'
                                + data.nombre + '</option>');

                        });
                    }, complete: function (data) {
                        $("#content").waitMe("hide");
                    },

                    error: function (ex) {
                        alert('Failed to retrieve data.' + ex);
                    }
                });
                return false;
                })

        });

    </script>

}