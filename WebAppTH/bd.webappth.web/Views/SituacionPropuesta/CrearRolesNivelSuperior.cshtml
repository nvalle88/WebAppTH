@model bd.webappth.entidades.ViewModels.RequerimientoRolPorDependenciaViewModel

@{
    ViewData["Title"] = "Roles";
}

@{await Html.RenderPartialAsync("_PartialViewMenu", Model);}

<!-- MAIN CONTENT -->
<div id="content">


    <!-- widget grid -->
    <section id="" class="">

        <!-- START ROW -->
        <div class="row">
            <!-- NEW COL START -->
            <article class="col-sm-12 col-md-12 col-lg-12">
                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget" id="wid-id-1" data-widget-editbutton="false" data-widget-custombutton="false">

                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2>Roles</h2>
                    </header>
                    <!-- widget div-->
                    <div>

                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->

                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body no-padding">

                            <form asp-action="CrearRolesNivelSuperior" asp-route-id="@Model.IdDependencia" asp-route-nombre="@Model.NombreDependencia" id="checkout-form" class="smart-form" novalidate="novalidate">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                

                                @{await Html.RenderPartialAsync("_PartialView", Model.RolesNivelJerarquicoSuperior);}

                                <footer>
                                    <input type="submit" value="Guardar" class="btn btn-default" onclick="espera()" />
                                    <input type="submit" asp-action="Index" class="btn btn-default" value="Cancelar" onclick="espera()" />

                                </footer>
                            </form>
                        </div>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->
                </div>
                <!-- end widget -->

            </article>

        </div>
        <!-- END ROW -->
    </section>
    <!-- end widget grid -->
    <!-- Modal -->

</div>


<!-- END MAIN CONTENT -->
@section Scripts {

    <link rel="stylesheet" href="~/lib/waitMe/waitMe.min.css" />
    <link rel="stylesheet" href="~/lib/waitMe/waitMe.css" />

    <script src='~/lib/waitMe/waitMe.min.js'></script>
    <script src='~/js/site.js'></script>


    <script type="text/javascript">
        function espera() {

            mostrarLoadingPanel("content", "Cargando...");
        }

        $("#btn_1").css("background-color", "#3276b1");
        $("#btn_1").css("color", "white");

    </script>
}
