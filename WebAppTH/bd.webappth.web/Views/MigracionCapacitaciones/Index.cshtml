@model List<bd.webappth.entidades.Negocio.GestionPlanCapacitacion>

@{
    ViewData["Title"] = "Index";
}
<link href="~/css/tabla/table.css" rel="stylesheet" />
<div id="content">
    <p></p>
    <a asp-action="Create" onclick="cargando()">
        <button type="button" asp-action="Create" onclick="cargando()" class="btn btn-labeled btn-default">
            <span class="btn-label">
                <i class="glyphicon glyphicon-plus"></i>
            </span>Nuevo
        </button>
    </a>
    <p> </p>
    <section id="" class="">
        <div class="row">
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-editbutton="false">
                    <header id="table">
                        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                        <h2>Consolidado capacitaciones</h2>
                    </header>
                    <div>
                        <div class="jarviswidget-editbox">
                        </div>
                        <div class="widget-body no-padding">
                            <table id="datatable_fixed_column" class="table table-striped table-bordered table-hover" width="100%">
                                <thead>
                                    <tr>
                                        <th data-class="expand">
                                            @Html.DisplayNameFor(model => model.FirstOrDefault().Nombre)
                                        </th>
                                        <th data-class="expand">
                                            @Html.DisplayNameFor(model => model.FirstOrDefault().Descripcion)
                                        </th>
                                        <th data-class="expand">
                                            @Html.DisplayNameFor(model => model.FirstOrDefault().Anio)
                                        </th>

                                        <th>
                                            Opciones
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Nombre)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Descripcion)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Anio)
                                            </td>
                                            <td>
                                                @if (item.Anio == DateTime.Now.Year)
                                                {<text>
                                                        @*@Html.ActionLink(" Descargar archivo", "Download", new { id = item.IdGestionPlanCapacitacion })|*@
                                                        @Html.ActionLink(" Ver reportados ", "MostrarExcelBase", new { id = item.IdGestionPlanCapacitacion }, new { onclick = "cargando();" }) |
                                                        @Html.ActionLink(" Cargar reportados", "ReportadoCapacitacion", new { id = item.IdGestionPlanCapacitacion }, new { onclick = "cargando();" }) |
                                                        @Html.ActionLink(" Editar", "Edit", new { id = item.IdGestionPlanCapacitacion }, new { onclick = "cargando();" }) |
                                                        @Html.ActionLink(" Eliminar", "Delete", new { id = item.IdGestionPlanCapacitacion }, new { onclick = "return confirm('Desea eliminar el registro... ?');" })
                                                </text>
                                            }
                                            else
                                            {
                                                <text>
                                                    @*@Html.ActionLink(" Descargar archivo", "Download", new { id = item.IdGestionPlanCapacitacion })|*@
                                                    @Html.ActionLink(" Ver reportados ", "MostrarExcelBase", new { id = item.IdGestionPlanCapacitacion }, new { onclick = "cargando();" }) |
                                                </text>

                                            }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>
@section Scripts {
    <script src='~/js/datatables/init.js'></script>
}

