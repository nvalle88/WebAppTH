

@model List<bd.webappth.entidades.ViewModels.ExperienciaLaboralRequeridaViewModel>
@using bd.webappth.entidades.ViewModels

@{ var modelo = new IndiceOcupacionalViewModel { IdIndiceOcupacional = Model.FirstOrDefault().IdIndiceOcupacional ,OpcionMenu=7}; }
@{await Html.RenderPartialAsync("_PartialViewIndiceOcupacional", modelo);}

<!-- MAIN CONTENT -->
<link href="~/css/tabla/table.css" rel="stylesheet" />
<div id="content">

    
    <p> </p>

    <!-- widget grid -->
    <section id="" class="">
        <!-- row -->
        <div class="row">
            <!-- NEW WIDGET START -->
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-editbutton="false">
                    <header id="table">
                        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                       <h2>Experiencias laborales requeridas</h2>
                    </header>
                    <!-- widget div-->
                    <div>
                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->
                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body no-padding">
                            <table id="datatable_fixed_column" class="table table-striped table-bordered table-hover" width="100%">
                                <thead>
                                    @if (Model.FirstOrDefault().IdExperienciaLaboralRequerida != -1)
                                    {
                                        

                                        <tr>
                                            <th data-class="expand">
                                                A&ntilde;o de experienca
                                            </th>
                                            <th data-class="expand">
                                                Meses
                                            </th>
                                            <th data-hide="phone">
                                                Expecificidad de experiencia
                                            </th>
                                            <th data-hide="phone">
                                                Estudio
                                            </th>
                                        </tr>

                                    }
                                    else
                                    {
                                        <tr>
                                            <th data-class="">
                                                Observaciones
                                            </th>
                                        </tr>
                                    }
                                </thead>
                                <tbody>
                                    @if (Model.FirstOrDefault().IdExperienciaLaboralRequerida != -1)
                                    {
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.AnoExperiencia)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.MesExperiencia)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.DescripcionEspecificidadExperiencia)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.NombreEstudio)
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td>
                                                <p>No existen resultados</p>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->
                </div>

            </article>
            <!-- WIDGET END -->
        </div>
        <!-- end row -->
        <!-- end row -->
    </section>
    <!-- end widget grid -->
</div>
<!-- END MAIN CONTENT -->

@section Scripts {
    <script src='~/js/datatables/init.js'></script>
}


