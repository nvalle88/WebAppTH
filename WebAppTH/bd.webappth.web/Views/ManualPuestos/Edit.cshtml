@model bd.webappth.entidades.ViewModels.ViewModelManualPuesto

@{
    ViewData["Title"] = "Perfil puesto";
}


<!-- MAIN CONTENT -->
<div id="content">
    
    <!-- widget grid -->
    <section id="" class="">

        <!-- START ROW -->
        <div class="row">
            <!-- NEW COL START -->
            <article class="col-sm-12 col-md-12 col-lg-12">
                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget" id="wid-id-1" data-widget-editbutton="false" data-widget-custombutton="false">

                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2>Perfil puesto</h2>
                    </header>
                    <!-- widget div-->
                    <div>

                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->
                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body no-padding">

                            <form asp-action="Edit" id="checkout-form" novalidate="novalidate">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="ManualPuesto.IdManualPuesto" />
                                @{await Html.RenderPartialAsync("_PartialViewManualPuestos");}


                                <div style="float:right; padding:1%;">
                                    <footer style="background-color:transparent;border:none;">
                                        <input type="submit" value="Guardar" class="btn btn-default" onclick="espera()" />
                                        <a asp-action="Index" class="btn btn-default" onclick="espera()">Cancelar</a>

                                    </footer>
                                </div>
                            </form>
                        </div>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->
                </div>
                <!-- end widget -->

            </article>

        </div>
        <!-- END ROW -->
    </section>
    <!-- end widget grid -->
    <!-- Modal -->

</div>
<!-- END MAIN CONTENT -->
