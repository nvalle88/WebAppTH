 @section Scripts {
    <script src='~/js/datatables/init.js'> </script>

     <script >
         $(document).ready(function () {
             $("body").on("click", "a.dialog-window", null, function (e) {
                 e.preventDefault();
                 var $link = $(this);
                 var title = $link.text();
                 $('#CargarCapacitaciones .modal-title').html(title);
                 var url = $(this).attr('href');
                 if (url.indexOf('#') == 0) {
                     $('#CargarCapacitaciones').modal('show');
                 }
                 else {
                     $.get(url, function (data) {
                         $('#CargarCapacitaciones .te').html(data);
                         $('#CargarCapacitaciones').modal();
                     }).success(function () { $('input:text:visible:first').focus(); });

                 }
             });
         });


     </script>


