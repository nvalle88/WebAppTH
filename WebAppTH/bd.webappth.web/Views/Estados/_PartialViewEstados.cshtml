@model bd.webappth.entidades.Negocio.Estado

<fieldset>
    <div class="row">
        <section class="col col-8">
            <label class="input">
                <i class="icon-prepend fa fa-user"></i>
                <input maxlength="20" asp-for="Nombre" class="form-control" placeholder="@Html.DisplayNameFor(model=>model.Nombre)" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </label>
        </section>
    </div>
    <span class="text-danger">@ViewData["Error"]</span>
</fieldset>

