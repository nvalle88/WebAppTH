@model bd.webappth.entidades.Negocio.CeseFuncion

@{
    ViewData["Title"] = "CeseFuncion";
}


<!-- MAIN CONTENT -->
<div id="content">
    <div class="col col-10">

        @if (@ViewData["Error"].ToString() != "")

            {

            <div class="col-lg-12">

                <div class="alert alert-block alert-dismissable">

                    <a class="close" data-dismiss="alert" href="#"><p>X</p></a>

                    <h4 class="alert-heading"><i class="fa fa-check-square-o"></i>Informaci&oacute;n!</h4>

                    <p>

                        <span class="text-danger"><strong><bold> @ViewData["Error"]</bold></strong></span>

                    </p>

                </div>

            </div>

        }
    </div>
    <!-- widget grid -->
    <section id="widget-grid" class="">

        <!-- START ROW -->
        <div class="row">
            <!-- NEW COL START -->
            <article class="col-sm-12 col-md-12 col-lg-12">
                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget" id="wid-id-1" data-widget-editbutton="false" data-widget-custombutton="false">

                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2>Cesar de Funciones</h2>
                    </header>
                    <!-- widget div-->
                    <div>

                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->
                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body no-padding">

                            <form asp-action="Create" id="checkout-form" class="smart-form" novalidate="novalidate">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="IdCeseFuncion" />
                                <input type="hidden" asp-for="IdEmpleado" />
                                <fieldset>
                                    <div class="row">
                                        <section class="col col-6">
                                            <label class="input">
                                                <i class="icon-prepend fa fa-user"></i>
                                                <input maxlength="200" value="@ViewData["NombresApellidos"]" disabled="disabled" class="form-control" />
                                            </label>
                                        </section>
                                        <section class="col col-6">
                                            <label class="input">
                                                <i class="icon-prepend fa fa-user"></i>
                                                <input maxlength="15" value="@ViewData["Identificacion"]" disabled="disabled" class="form-control" />
                                            </label>
                                        </section>
                                    </div>
                                    <div class="row">
                                        <section class="col col-6">
                                            <div class="form-group">
                                                <div class="input-group">
                                                    <span class="input-group-addon"><i class="fa fa-user fa  fa-fw"></i></span>
                                                    <select asp-for="IdTipoCesacionFuncion" class="form-control input " asp-items="ViewBag.IdTipoCesacionFuncion">
                                                        <option value="0" selected="" disabled="">Seleccione Tipo de Cesasi&oacute;n</option>
                                                    </select>
                                                    <span asp-validation-for="IdTipoCesacionFuncion" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </section>
                                        <section class="col col-6">
                                            <label class="input">
                                                <i class="icon-append fa fa-calendar"></i>
                                                <input asp-for="FechaNotificacion" value="" type="text" placeholder="Seleccione fecha de solicitud" class="datepicker" data-dateformat='dd/mm/yy'>
                                                <span asp-validation-for="FechaNotificacion" class="text-danger"></span>
                                            </label>
                                        </section>                                 
                                    </div>
                                    <section>
                                        <label class="label"></label>
                                        <label class="textarea">
                                            <i class="icon-append fa fa-comment"></i>
                                            <textarea maxlength="50" asp-for="Observacion" rows="3" placeholder="@Html.DisplayNameFor(model=>model.Observacion)"></textarea>
                                            <span asp-validation-for="Observacion" class="text-danger"></span>
                                        </label>
                                    </section>

                                </fieldset>
                                <footer>
                                    <input type="submit" value="Guardar" class="btn btn-primary" />
                                    <a asp-action="SeleccionarDependencia" class="btn btn-default">Cancelar</a>
                                </footer>
                            </form>
                        </div>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->
                </div>
                <!-- end widget -->

            </article>

        </div>
        <!-- END ROW -->
    </section>
    <!-- end widget grid -->
    <!-- Modal -->

</div>
<!-- END MAIN CONTENT -->
@section Scripts {
    <script type="text/javascript">


    </script>
}


