@model bd.webappth.entidades.Negocio.RelacionLaboral
<fieldset>
    <div class="row">
        <section class="col col-8">
            <label class="input">
                <i class="icon-prepend fa fa-user"></i>
                <select asp-for="IdRegimenLaboral" class="form-control" asp-items="ViewBag.IdRegimenLaboral"></select>
                <span asp-validation-for="IdRegimenLaboral" class="text-danger"></span>
            </label>
        </section>
    </div>

    <div class="row">
        <section class="col col-8">
            <label class="input">
                <i class="icon-prepend fa fa-user"></i>
                <input maxlength="20" asp-for="Nombre" class="form-control" placeholder="@Html.DisplayNameFor(model=>model.Nombre)" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </label>
        </section>
    </div>

</fieldset>

