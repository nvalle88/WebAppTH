@model bd.webappth.entidades.ViewModels.DependenciaDatosViewModel

@{
    ViewData["Title"] = "Index";
}

<style>
    .label-nombres {
        border-width: 0px;
        font-weight: 700;
    }

    .label-valor {
        border-width: 2px;
    }
</style>


@{await Html.RenderPartialAsync("_PartialViewMenu");}

<div id="content">

    <div class="row">

        <section class="col col-lg-12">

            <div class="jarviswidget" id="wid-id-1" data-widget-editbutton="false" data-widget-custombutton="false">

                <header>
                    <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                    <h2>Dependencia actual</h2>
                </header>

                <div class="row">

                    <section class="col-lg-9 no-padding">

                        <label class="col-lg-3">
                            <label class="form-control label-nombres">
                                @Html.DisplayNameFor(d => d.NombreSucursal):
                            </label>
                        </label>

                        <label class="col-lg-9">
                            <label class="form-control label-valor">
                                @Html.DisplayFor(d => d.NombreSucursal)
                            </label>
                        </label>

                    </section>

                    <section class="col-lg-9 no-padding">

                        <label class="col-lg-3">
                            <label class="form-control label-nombres">
                                @Html.DisplayNameFor(d => d.NombreDependencia):
                            </label>
                        </label>

                        <label class="col-lg-9">
                            <label class="form-control label-valor">
                                @Html.DisplayFor(d => d.NombreDependencia)
                            </label>
                        </label>

                    </section>

                    <section class="col-lg-9 no-padding">

                        <label class="col-lg-3">
                            <label class="form-control label-nombres">
                                Empleado jefe:
                            </label>
                        </label>

                        <label class="col-lg-9">
                            <label class="form-control label-valor">
                                @Html.DisplayFor(d => d.DatosBasicosEmpleadoJefeViewModel.Nombres)
                                &nbsp;
                                @Html.DisplayFor(d => d.DatosBasicosEmpleadoJefeViewModel.Nombres)
                            </label>
                        </label>

                    </section>

                    <section class="col-lg-9 no-padding">&nbsp;</section>

                </div>


            </div>

        </section>

    </div>

    <p></p>

    <!-- widget grid -->
    <section id="widget-grid" class="">
        <!-- row -->
        <div class="row">
            <!-- NEW WIDGET START -->
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-editbutton="false">
                    <!-- widget options:
                    usage: <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false">

                    data-widget-colorbutton="false"
                    data-widget-editbutton="false"
                    data-widget-togglebutton="false"
                    data-widget-deletebutton="false"
                    data-widget-fullscreenbutton="false"
                    data-widget-custombutton="false"
                    data-widget-collapsed="true"
                    data-widget-sortable="false"

                    -->
                    <header>
                        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                        <h2>Solicitudes vacaciones</h2>
                    </header>
                    <!-- widget div-->
                    <div>
                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->
                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body no-padding">
                            <table id="datatable_fixed_column" class="table table-striped table-bordered table-hover" width="100%">
                                <thead>

                                    <tr>

                                        <th data-class="expand">
                                            @Html.DisplayNameFor(model => model.ListaDependenciasHijas.FirstOrDefault().NombreDependencia)
                                        </th>

                                        <th data-class="expand">
                                            Empleado jefe
                                        </th>

                                        <th>Opciones</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in Model.ListaDependenciasHijas)
                                    {

                                        <tr>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.NombreDependencia)
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.DatosBasicosEmpleadoJefeViewModel.Nombres)
                                                &nbsp;
                                                @Html.DisplayFor(modelItem => item.DatosBasicosEmpleadoJefeViewModel.Apellidos)
                                            </td>

                                            <td>
                                                @if (item.DatosBasicosEmpleadoJefeViewModel != null)
    {

                                            @Html.ActionLink("Ver solicitudes", "Solicitudes", new { id = item.DatosBasicosEmpleadoJefeViewModel.IdEmpleado })
                                                    <text>
                                                    &nbsp;| &nbsp;
                                                    </text>

                                                }

                                                @Html.ActionLink("Ver Dependencia", "ConsultarDependencia", new { id = item.IdDependencia })

                                            </td>

                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->
                </div>

            </article>
            <!-- WIDGET END -->
        </div>
        <!-- end row -->
        <!-- end row -->
    </section>
    <!-- end widget grid -->
    <!-- widget grid -->
    <section id="widget-grid" class="">
        <!-- row -->
        <div class="row">
            <!-- NEW WIDGET START -->
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-editbutton="false">
                    <!-- widget options:
                    usage: <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false">

                    data-widget-colorbutton="false"
                    data-widget-editbutton="false"
                    data-widget-togglebutton="false"
                    data-widget-deletebutton="false"
                    data-widget-fullscreenbutton="false"
                    data-widget-custombutton="false"
                    data-widget-collapsed="true"
                    data-widget-sortable="false"

                    -->
                    <header>
                        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                        <h2>Empleados de la dependencia</h2>
                    </header>
                    <!-- widget div-->
                    <div>
                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->
                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body no-padding">
                            <table id="dt_basic" class="table table-striped table-bordered table-hover" width="100%">
                                <thead>

                                    <tr>

                                        <th data-class="expand">
                                            @Html.DisplayNameFor(model => model.DatosBasicosEmpleadoJefeViewModel.Identificacion)
                                        </th>

                                        <th data-class="expand">
                                            @Html.DisplayNameFor(model => model.DatosBasicosEmpleadoJefeViewModel.Nombres)
                                        </th>

                                        <th data-class="expand">
                                            @Html.DisplayNameFor(model => model.DatosBasicosEmpleadoJefeViewModel.Apellidos)
                                        </th>

                                        <th>Opciones</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in Model.ListaEmpleadosDependencia)
                                    {

                                        <tr>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.Identificacion)
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.Nombres)
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.Apellidos)
                                            </td>

                                            <td>
                                                @Html.ActionLink("Ver solicitudes", "Solicitudes", new { id = item.IdEmpleado })
                                            </td>

                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->
                </div>

            </article>
            <!-- WIDGET END -->
        </div>
        <!-- end row -->
        <!-- end row -->
    </section>
    <!-- end widget grid -->
</div>
<!-- END MAIN CONTENT -->

@section Scripts {
    <script src='~/js/datatables/init.js'></script>

    <script>
        $("#btn_1").css("background-color", "#3276b1");
        $("#btn_1").css("color", "white");


        function espera() {

            mostrarLoadingPanel("content", "Cargando...");
        }

    </script>
}

