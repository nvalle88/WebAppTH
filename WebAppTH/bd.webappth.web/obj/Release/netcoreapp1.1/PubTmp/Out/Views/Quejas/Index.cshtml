@model List<bd.webappth.entidades.ViewModels.ViewModelEvaluacionDesempeno>

@{
    ViewData["Title"] = "Index";
}
<link href="~/css/tabla/table.css" rel="stylesheet" />
<link rel="stylesheet" href="~/lib/waitMe/waitMe.min.css" />
<link rel="stylesheet" href="~/lib/waitMe/waitMe.css" />
<!-- MAIN CONTENT -->
<div id="content">
    <div class="col col-10">

        @if (@ViewData["Error"].ToString() != "")

        {

            <div class="col-lg-12">

                <div class="alert alert-block alert-dismissable">

                    <a class="close" data-dismiss="alert" href="#"><p>X</p></a>

                    <h4 class="alert-heading"><i class="fa fa-check-square-o"></i>Informaci&oacute;n!</h4>

                    <p>

                        <span class="text-danger"><strong><bold> @ViewData["Error"]</bold></strong></span>

                    </p>

                </div>

            </div>

        }
    </div>
    <p></p>
    <p> </p>

    <!-- widget grid -->
    <section id="" class="">
        <!-- row -->
        <div class="row">
            <!-- NEW WIDGET START -->
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-editbutton="false">
                    <!-- widget options:
                    usage: <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false">

                    data-widget-colorbutton="false"
                    data-widget-editbutton="false"
                    data-widget-togglebutton="false"
                    data-widget-deletebutton="false"
                    data-widget-fullscreenbutton="false"
                    data-widget-custombutton="false"
                    data-widget-collapsed="true"
                    data-widget-sortable="false"

                    -->
                    <header id="table">
                        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                        <h2>Empleados</h2>
                    </header>
                    <!-- widget div-->
                    <div>
                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->
                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body no-padding">
                            <table id="datatable_fixed_column" class="table table-striped table-bordered table-hover" width="100%">
                                <thead>
                                    <tr>
                                        <th data-class="">
                                            Identificaci&oacuten
                                        </th>
                                        <th data-class="expand">
                                            Nombres y Apellidos
                                        </th>
                                        <th data-class="">
                                            Fecha Registro Eval001
                                        </th>
                                        <th data-class="">
                                            Desde
                                        </th>
                                        <th data-class="">
                                            Hasta
                                        </th>
                                        <th>
                                            Opciones
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Identificacion)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.NombreApellido)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.FechaRegistro)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.FechaDesde)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.FechaHasta)
                                        </td>
                                        <td>
                                            @Html.ActionLink("Quejas", "IndexQuejas", new { idEmpleado = item.IdEmpleado, ideval = item.IdEval001 }, new { onclick = "cargando()" })<br />
                                            @* @Html.ActionLink("Editar", "Edit", new { id = item.IdEmpleado })<br />*@


                                        </td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->
                </div>

            </article>
            <!-- WIDGET END -->
        </div>
        <!-- end row -->
        <!-- end row -->
    </section>
    <!-- end widget grid -->
</div>
<!-- END MAIN CONTENT -->

@section Scripts {
    <script src='~/lib/waitMe/waitMe.min.js'></script>
    <script src='~/js/site.js'></script>
    <script type="text/javascript">
        function cargando() {
            mostrarLoadingPanel("content", "")
        }
    </script>

    <script src='~/js/datatables/init.js'></script>
}

