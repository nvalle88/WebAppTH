@model bd.webappth.entidades.Negocio.PersonaEnfermedad

<fieldset>
    <div class="row">

        <section class="col col-6">
            <label>Tipo de Enfermedad:</label>
            <label class="input">
                <select asp-for="IdTipoEnfermedad" class="form-control" asp-items="ViewBag.IdTipoEnfermedad">
                    <option value="0"><Seleccione una @Html.DisplayNameFor(model => model.IdTipoEnfermedad)></option>
                </select>
                <span asp-validation-for="IdTipoEnfermedad" class="text-danger"></span>
            </label>
        </section>
        <section class="col col-6">
            <label>Instituci&oacute;n que Emite:</label>
            <label class="input">
                <i class="icon-prepend fa fa-user"></i>
                <input maxlength="150" asp-for="InstitucionEmite" class="form-control" placeholder="@Html.DisplayNameFor(model=>model.InstitucionEmite)" />
                <span asp-validation-for="InstitucionEmite" class="text-danger"></span>
            </label>
        </section>
    </div>
    <span class="text-danger">@ViewData["Error"]</span>
</fieldset>