@model bd.webappth.entidades.Negocio.NacionalidadIndigena
<fieldset>
    <div class="row">
        <section class="col col-8">
            <label class="input">
                <select asp-for="IdEtnia" class="form-control" asp-items="ViewBag.IdEtnia">
                    <option id="0"><Seleccione una @Html.DisplayNameFor(model => model.IdEtnia)></option>
                </select>
                <span asp-validation-for="IdEtnia" class="text-danger"></span>
            </label>
        </section>
    </div>

    <div class="row">
        <section class="col col-8">
            <label class="input">
                <input maxlength="20" asp-for="Nombre" class="form-control" placeholder="@Html.DisplayNameFor(model=>model.Nombre)" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </label>
        </section>
    </div>

</fieldset>