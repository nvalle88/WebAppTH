@model bd.webappth.entidades.Negocio.IndiceOcupacionalCapacitaciones

@{
    ViewData["Title"] = "Indice Ocupacional Capaciatacioners";
}

<link rel="stylesheet" href="~/lib/select2/dist/css/select2.min.css" />

<!-- MAIN CONTENT -->
<div id="content">

    <!-- widget grid -->
    <section id="widget-grid" class="">

        <!-- START ROW -->
        <div class="row">
            <!-- NEW COL START -->
            <article class="col-sm-12 col-md-12 col-lg-6">
                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget" id="wid-id-1" data-widget-editbutton="false" data-widget-custombutton="false">

                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2>&Iacutendice Ocupacional de Estudio create</h2>
                    </header>
                    <!-- widget div-->
                    <div>

                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->

                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body no-padding">

                            <form asp-action="Create" id="checkout-form" class="smart-form" novalidate="novalidate">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="IdIndiceOcupacional" />
                                <fieldset>
                                    <div class="row">
                                        <section class="col col-8">
                                            <label class="input">
                                                <select asp-for="IdCapacitacion" class="form-control" asp-items="ViewBag.IdCapacitacion">
                                                    <option id="0"><Seleccione una @Html.DisplayNameFor(model => model.IdCapacitacion)></option>
                                                </select>
                                                <span asp-validation-for="IdCapacitacion" class="text-danger"></span>
                                            </label>
                                        </section>
                                    </div>
                                </fieldset>

                                <footer>
                                    <span class="text-danger">@ViewData["Error"]</span>
                                    <input type="submit" value="Guardar" class="btn btn-primary" />
                                    <a asp-action="Index" class="btn btn-default">Cancelar</a>
                                </footer>
                            </form>
                        </div>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->
                </div>
                <!-- end widget -->

            </article>

        </div>
        <!-- END ROW -->
    </section>
    <!-- end widget grid -->
    <!-- Modal -->

</div>
<!-- END MAIN CONTENT -->
@section Scripts {
    <script type="text/javascript">
        <script src='~/lib/select2/dist/js/select2.min.js'></script>
    <script src='~/lib/select2/dist/js/i18n/es.js'></script>
    <script src='~/js/site.js'></script>
    <script type="text/javascript">
            $(document).ready(function () {
                Init_Select2();
    });

    </script>
}