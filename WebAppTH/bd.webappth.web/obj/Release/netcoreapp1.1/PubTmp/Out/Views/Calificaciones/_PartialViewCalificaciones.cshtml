@model bd.webappth.entidades.Negocio.Calificacion
<fieldset>
    <div class="row">
        <section class="col col-8">
            <label class="input">
                <select asp-for="IdTipoCalificacion" class="form-control" asp-items="ViewBag.IdTipoCalificacion">
                    <option id="0"><Seleccione una @Html.DisplayNameFor(model => model.IdTipoCalificacion)></option>
                </select>
                <span asp-validation-for="IdTipoCalificacion" class="text-danger"></span>
            </label>
        </section>
    </div>
    <div class="row">
        <section class="col col-8">
            <label class="input">
                <select asp-for="IdCandidatoConcurso" class="form-control" asp-items="ViewBag.IdCandidatoConcurso">
                    <option id="0"><Seleccione una @Html.DisplayNameFor(model => model.IdTipoCalificacion)></option>
                </select>
                <span asp-validation-for="IdCandidatoConcurso" class="text-danger"></span>
            </label>
        </section>
    </div>
    <div class="row">
        <section class="col col-8">
            <label class="input">
                <i class="icon-append fa fa-comment"></i>
                <input maxlength="20" asp-for="Puntaje" class="form-control" placeholder="@Html.DisplayNameFor(model=>model.Puntaje)" />
                <span asp-validation-for="Puntaje" class="text-danger"></span>
            </label>
        </section>
    </div>

</fieldset>