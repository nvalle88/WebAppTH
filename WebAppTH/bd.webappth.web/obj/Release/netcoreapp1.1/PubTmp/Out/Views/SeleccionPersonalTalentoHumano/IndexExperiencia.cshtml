@model List<bd.webappth.entidades.Negocio.CandidatoTrayectoriaLaboral>
<link href="~/css/tabla/table.css" rel="stylesheet" />
@using bd.webappth.entidades.ViewModels
@{ var modelo = new ViewModelSeleccionPersonal { OpcionMenu = 3 }; }

@{await Html.RenderPartialAsync("_PartialViewMenu", modelo);}

@{
    ViewData["Title"] = "Planificación de puestos";
}

<div id="content">
    <div class="col col-10">
        @if (@ViewData["Error"].ToString() != "")

        {

            <div class="col-lg-12">
                <div class="alert alert-block alert-dismissable">
                    <a class="close" data-dismiss="alert" href="#"><p>X</p></a>
                    <h4 class="alert-heading"><i class="fa fa-check-square-o"></i>Informaci&oacute;n!</h4>
                    <p>
                        <span class="text-danger"><strong><bold> @ViewData["Error"]</bold></strong></span>
                    </p>
                </div>
            </div>

        }
    </div>
    <p></p>
    <section class="col col-lg-10">
        <a asp-action="CreateExperiencia">
            <button type="button" asp-action="CreateExperiencia" class="btn btn-labeled btn-default">
                <span class="btn-label">
                    <i class="glyphicon glyphicon-plus"></i>
                </span>Nuevo
            </button>
        </a>
    </section>
    <section class="col col-lg-2">
        @if (Model.Count > 0)
        {
            { await Html.RenderPartialAsync("_PartialViewBotonIndexExperiencia"); }
        }
         </section>
        <p> </p>


        <!-- widget grid -->
        <section id="" class="">
            <!-- row -->
            <div class="row">
                <!-- NEW WIDGET START -->
                <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <!-- Widget ID (each widget will need unique ID)-->
                    <div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-editbutton="false">

                        <header id="table">
                            <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                            <h2>Experiencia</h2>
                        </header>
                        <!-- widget div-->
                        <div>
                            <!-- widget edit box -->
                            <div class="jarviswidget-editbox">
                                <!-- This area used as dropdown edit box -->
                            </div>
                            <!-- end widget edit box -->
                            <!-- widget content -->
                            <div class="widget-body no-padding">
                                <table id="datatable_fixed_column" class="table table-striped table-bordered table-hover" width="100%">
                                    <thead>

                                        <tr>
                                            <th data-class="expand">
                                                @Html.DisplayNameFor(model => model.FirstOrDefault().Institucion)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.FirstOrDefault().FechaFin)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.FirstOrDefault().FechaFin)
                                            </th>

                                            <th>Opciones</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Institucion)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.FechaInicio)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.FechaFin)
                                                </td>
                                                <td>
                                                    @Html.ActionLink("Eliminar", "", new { id = item.IdCandidatoTrayectoriaLaboral })

                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                            <!-- end widget content -->
                        </div>
                        <!-- end widget div -->
                    </div>

                </article>
                <!-- WIDGET END -->
            </div>
            <!-- end row -->
            <!-- end row -->
        </section>
        <!-- end widget grid -->
</div>
<!-- END MAIN CONTENT -->

@section Scripts {
    <script src='~/js/datatables/init.js'></script>
}
