@model bd.webappth.entidades.Negocio.ReliquidacionViatico

<div id="bootstrap-wizard-1" class="col-sm-12">
    <div class="form-bootstrapWizard">
        <ul class="bootstrapWizard form-wizard"></ul>
        <div class="clearfix"></div>
    </div>

    <div class="tab-content">
        <div id="camposEmpleado">
            <div class="tab-pane active" id="tab1">
                <br>
                <div class="row">
                    <article class="col-lg-12">
                        <div class="row">
                            <div class="col-sm-4">
                                <label>Tipo de transporte:</label>
                                <div class="form-group">
                                    <select id="IdTipoTransporte" asp-for="IdTipoTransporte" class="form-control input " asp-items="ViewBag.IdTipoTransporte" data-msg-required='El campo es requerido' data-rule-required='true'>
                                        <option value="0" selected="" disabled="">Seleccione</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label>Nombre Trasporte:</label>
                                    <input  asp-for="NombreTransporte" type="text" class="form-control" data-msg-required='El campo es requerido' data-rule-required='true'>
                                    <span asp-validation-for="NombreTransporte" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label>Fecha de salida:</label>
                                    <input id="FechaSalida" asp-for="FechaSalida" type="text" class="form-control input datepicker " placeholder="Fecha de llegada: " data-dateformat='dd/mm/yy' data-msg-required='El campo es requerido' data-rule-required='true'>
                                    <span asp-validation-for="FechaSalida" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label>Hora de salida:</label>
                                    <input type="time" asp-for="HoraSalida" class="form-control input  " data-msg-required='El campo es requerido' data-rule-required='true'>
                                    <span asp-validation-for="HoraSalida" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label>Fecha de llegada:</label>
                                    <input id="FechaLlegada" asp-for="FechaLlegada" type="text" class="form-control input datepicker " placeholder="Fecha de llegada: " data-dateformat='dd/mm/yy' data-msg-required='El campo es requerido' data-rule-required='true'>
                                    <span asp-validation-for="FechaLlegada" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label>Hora de llegada:</label>
                                    <input type="time" asp-for="HoraLlegada" class="form-control input  " data-msg-required='El campo es requerido' data-rule-required='true'>
                                    <span asp-validation-for="HoraLlegada" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <section class="col col-lg-4">
                                <div class="form-group">
                                    <label>Valor:</label>
                                    <input id="Valor" asp-for="ValorEstimado" class="form-control input " placeholder="Valor" type="text" data-msg-required='El campo es requerido' data-rule-required='true'>
                                    <span asp-validation-for="ValorEstimado" class="text-danger"></span>
                                </div>
                            </section>
                            <section class="col col-lg-4">
                                <label>Ciudad de Origen:</label>
                                <div class="form-group">
                                    <select  asp-for="IdCiudadDestino" class="form-control input" asp-items="ViewBag.IdCiudadDestino" data-msg-required='El campo es requerido' data-rule-required='true'>
                                        <option value="0" selected="" disabled="">Seleccione</option>
                                    </select>
                                </div>
                            </section>
                            <section class="col col-lg-4">
                                <label>Ciudad de Destino:</label>
                                <div class="form-group">
                                    <select  asp-for="IdCiudadOrigen" class="form-control input" asp-items="ViewBag.IdCiudadOrigen" data-msg-required='El campo es requerido' data-rule-required='true'>
                                        <option value="0" selected="" disabled="">Seleccione</option>
                                    </select>
                                </div>
                            </section>
                        </div>
                    </article>
                </div>
            </div>
    </div>
</div>