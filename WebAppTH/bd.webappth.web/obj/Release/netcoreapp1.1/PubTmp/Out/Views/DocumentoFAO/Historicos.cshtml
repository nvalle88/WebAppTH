@model List<bd.webappth.entidades.ViewModels.DocumentoFAOViewModel>
@using bd.webappth.entidades.ViewModels
<link href="~/css/tabla/table.css" rel="stylesheet" />
@{ var modelo = new DocumentoFAOViewModel { OpcionMenu = 4 }; }
@{await Html.RenderPartialAsync("_PartialViewIDocumentoFAO", modelo);}

<!-- MAIN CONTENT -->
<div id="content">

    <div class="row">
        <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-editbutton="false">
                <header id="table">
                    <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                    <h2> Historicos</h2>
                </header>
                <div>
                    <div class="jarviswidget-editbox">
                    </div>
                    <div class="widget-body no-padding">
                        <table id="dt_basic" class="table table-striped table-bordered table-hover" width="100%">
                            <thead>
                                <tr>
                                    <th data-hide="phone">
                                        @Html.DisplayNameFor(model => model.FirstOrDefault().Partida)
                                    </th>
                                    <th data-hide="phone">
                                        @Html.DisplayNameFor(model => model.FirstOrDefault().Identificacion)
                                    </th>
                                    <th data-hide="phone">
                                        @Html.DisplayNameFor(model => model.FirstOrDefault().NombreApellido)
                                    </th>
                                    <th data-hide="phone">
                                        @Html.DisplayNameFor(model => model.FirstOrDefault().PuestoActual)
                                    </th>
                                    <th data-hide="phone">
                                        @Html.DisplayNameFor(model => model.FirstOrDefault().GrupoOcupacional)
                                    </th>
                                    <th data-hide="phone">
                                        @Html.DisplayNameFor(model => model.FirstOrDefault().Remuneracion)
                                    </th>
                                    <th data-hide="phone">
                                        @Html.DisplayNameFor(model => model.FirstOrDefault().NuevoPuesto)
                                    </th>
                                    <th data-hide="phone">
                                        @Html.DisplayNameFor(model => model.FirstOrDefault().GrupoOcupacionalPropuesta)
                                    </th>
                                    <th data-hide="phone">
                                        @Html.DisplayNameFor(model => model.FirstOrDefault().RemuneracionPropuesta)
                                    </th>
                                    <th data-hide="phone">
                                        @Html.DisplayNameFor(model => model.FirstOrDefault().Anio)
                                    </th>
                                    <th>Opciones</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Partida)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Identificacion) 
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.nombre)  @Html.DisplayFor(modelItem => item.apellido)
                                    </td>                                    
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PuestoActual)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.GrupoOcupacional)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Remuneracion)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NuevoPuesto)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.GrupoOcupacionalPropuesta)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.RemuneracionPropuesta)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Anio)
                                    </td>
                                    @if (item.estado == 3)
                                    {
                                        <td>
                                            @Html.ActionLink("Detalle", "DetalleJefe", new { id = item.IdEmpleado, IdActividad = item.IdFormularioAnalisisOcupacional })
                                        </td>

                                    }


                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </article>
    </div>
</div>


@section Scripts {
    <script src='~/js/datatables/init.js'></script>
}


