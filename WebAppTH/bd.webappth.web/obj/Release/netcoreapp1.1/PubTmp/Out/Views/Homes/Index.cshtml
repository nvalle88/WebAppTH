@model List<bd.webappth.entidades.Negocio.Noticia>

<div id="content">
    <!-- row -->
    <div class="row">
        <!-- col -->
        <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
            <h1 class="page-title txt-color-blueDark">
                <!-- PAGE HEADER -->
                <i class="fa-fw fa fa-home"></i> Sistema de Talento Humano <span>
                    >
                    Noticias
                </span>
            </h1>
        </div>
        <!-- end col -->
        <!-- right side of the page with the sparkline graphs -->
        <!-- col -->
        <div class="col-xs-12 col-sm-5 col-md-5 col-lg-8">
            <!-- sparks -->
            
            <!-- end sparks -->
        </div>
        <!-- end col -->
    </div>
    <!-- end row -->
    <div class="row">
        <div class="col-sm-12">
            <div class="well padding-12">
               @foreach (var item in Model)
               {
                   
                <div class="row">
                    <div class="col-md-4">
                         <img src="~/@Html.DisplayFor(modelItem => item.Foto)" class="img-responsive" alt="img" height="180" width="180">
                       
                        <ul class="list-inline padding-10">
                            <li>
                                <i class="fa fa-calendar"></i>
                                <a href="javascript:void(0);"> @Html.DisplayFor(modelItem => item.Fecha) </a>
                            </li>
                            
                        </ul>
                    </div>
                    <div class="col-md-8 padding-left-0">
                        <h3 class="margin-top-0"><a href="javascript:void(0);">@Html.DisplayFor(modelItem => item.Titulo) </a><br><small class="font-xs"></small></h3>
                        <p>
                           @Html.DisplayFor(modelItem => item.Descripcion)
                        </p>
                       <br />
                       <hr />
                       <br />
                    </div>
                </div>
               }
            </div>
        </div>
     
    </div>
</div>