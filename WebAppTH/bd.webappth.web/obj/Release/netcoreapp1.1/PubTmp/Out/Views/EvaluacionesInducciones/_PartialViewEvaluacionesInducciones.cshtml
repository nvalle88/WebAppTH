@model bd.webappth.entidades.Negocio.EvaluacionInducion

<fieldset>
    <div class="row">
        <section class="col col-4">
            <label class="label">@Html.DisplayNameFor(model => model.Nombre)</label>
            <label class="input">
                <input maxlength="50" asp-for="Nombre" class="form-control" placeholder="@Html.DisplayNameFor(model=>model.Nombre)" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </label>
        </section>
        <section class="col col-4">
            <label class="label">@Html.DisplayNameFor(model => model.MinimoAprobar)</label>
            <label class="input">
                <input maxlength="2" onkeypress="return checkIt(event)" asp-for="MinimoAprobar" class="form-control" placeholder="@Html.DisplayNameFor(model=>model.MinimoAprobar)" />
                <span asp-validation-for="MinimoAprobar" class="text-danger"></span>
            </label>
        </section>
        <section class="col col-4">
            <label class="label">@Html.DisplayNameFor(model => model.MinimoAprobar)</label>
            <label class="input">
                <input maxlength="3" onkeypress="return checkIt(event)" asp-for="MaximoPuntos" class="form-control" placeholder="@Html.DisplayNameFor(model=>model.MaximoPuntos)" />
                <span asp-validation-for="MaximoPuntos" class="text-danger"></span>
            </label>
        </section>
    </div>
</fieldset> 