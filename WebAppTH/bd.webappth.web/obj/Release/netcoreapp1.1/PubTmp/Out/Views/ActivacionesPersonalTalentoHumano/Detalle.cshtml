@model bd.webappth.entidades.ViewModels.RequerimientoRolPorDependenciaViewModel
<link href="~/css/tabla/table.css" rel="stylesheet" />

@{
    ViewData["Title"] = "Planificación de puestos";
}

<style>
    .input-invisible {
        background-color: transparent;
        width: 100%;
        border: 0px;
    }
</style>

<!-- MAIN CONTENT -->
<div id="content">


    <div class="col col-10">
        @if (@ViewData["Error"].ToString() != "")

        {

            <div class="col-lg-12">
                <div class="alert alert-block alert-dismissable">
                    <a class="close" data-dismiss="alert" href="#"><p>X</p></a>
                    <h4 class="alert-heading"><i class="fa fa-check-square-o"></i>Informaci&oacute;n!</h4>
                    <p>
                        <span class="text-danger"><strong><bold> @ViewData["Error"]</bold></strong></span>
                    </p>
                </div>
            </div>

        }
    </div>

    <p></p>



    <!-- widget grid -->
    <section id="" class="">
        <!-- row -->

        <div class="row">

            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                * Propuesta @Model.NombreDependencia
            </div>
        </div>

        <div class="row">&nbsp;</div>

        

        <div class="row">


            <div class="col col-lg-12">
                <form asp-action="Volver" id="checkout-form" novalidate="novalidate">


                    <button type="submit" class="btn btn-labeled btn-default" onclick="espera()">
                        <span class="btn-label">
                            <i class="glyphicon glyphicon-send"></i>
                        </span>Volver&nbsp;

                    </button>


                </form>
            </div>
        </div>
        


        <div class="row">&nbsp;</div>

        <div class="row">


            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-editbutton="false">
                    <!-- widget options:
                usage: <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false">

                data-widget-colorbutton="false"
                data-widget-editbutton="false"
                data-widget-togglebutton="false"
                data-widget-deletebutton="false"
                data-widget-fullscreenbutton="false"
                data-widget-custombutton="false"
                data-widget-collapsed="true"
                data-widget-sortable="false"

                -->
                    <header id="table">
                        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                        <h2>@Html.DisplayFor(model => Model.RolesNivelJerarquicoSuperior.NombreGrupoOcupacional)</h2>
                    </header>
                    <!-- widget div-->
                    <div>

                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->
                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body no-padding">

                            <table id="datatable_fixed_column" class="table table-striped table-bordered table-hover" width="100%">

                                <thead>


                                    <tr>
                                        <th data-class="expand">
                                            @Html.DisplayNameFor(model => Model.RolesNivelJerarquicoSuperior.ListaRolesRequeridos.FirstOrDefault().NombreRolPuesto)
                                        </th>

                                        <th data-class="expand">
                                            @Html.DisplayNameFor(model => Model.RolesNivelJerarquicoSuperior.ListaRolesRequeridos.FirstOrDefault().Cantidad)
                                        </th>

                                        <th data-class="expand">
                                            @Html.DisplayNameFor(model => Model.RolesNivelJerarquicoSuperior.ListaRolesRequeridos.FirstOrDefault().Descripcion)
                                        </th>


                                    </tr>

                                </thead>
                                <tbody>

                                    @foreach (var item in Model.RolesNivelJerarquicoSuperior.ListaRolesRequeridos)
                                {
                                    <tr>

                                        <td>
                                            @*
                                            @Html.ActionLink(item.NombreRolPuesto, "CrearBrechasParaDependencia", new { id = item.IdDependencia }, new { onclick = "espera()"})
                                            *@

                                            @Html.DisplayFor(modelItem => item.NombreRolPuesto)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.Cantidad)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.Descripcion)
                                        </td>

                                    </tr>
                            }
                                </tbody>
                            </table>


                        </div>
                        <!-- end widget content -->

                    </div>
                    <!-- end widget div -->

                </div>

            </article>

        </div>

        <div class="row">

            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-editbutton="false">
                    <!-- widget options:
                usage: <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false">

                data-widget-colorbutton="false"
                data-widget-editbutton="false"
                data-widget-togglebutton="false"
                data-widget-deletebutton="false"
                data-widget-fullscreenbutton="false"
                data-widget-custombutton="false"
                data-widget-collapsed="true"
                data-widget-sortable="false"

                -->
                    <header id="table">
                        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                        <h2>@Html.DisplayFor(model => Model.RolesNivelOperativo.NombreGrupoOcupacional)</h2>
                    </header>
                    <!-- widget div-->
                    <div>

                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->
                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body no-padding">

                            <table id="dt_basic" class="table table-striped table-bordered table-hover" width="100%">

                                <thead>


                                    <tr>
                                        <th data-class="expand">
                                            @Html.DisplayNameFor(model => Model.RolesNivelOperativo.ListaRolesRequeridos.FirstOrDefault().NombreRolPuesto)
                                        </th>

                                        <th data-class="expand">
                                            @Html.DisplayNameFor(model => Model.RolesNivelOperativo.ListaRolesRequeridos.FirstOrDefault().Cantidad)
                                        </th>

                                        <th data-class="expand">
                                            @Html.DisplayNameFor(model => Model.RolesNivelOperativo.ListaRolesRequeridos.FirstOrDefault().Descripcion)
                                        </th>

                                    </tr>

                                </thead>
                                <tbody>

                                    @foreach (var item in Model.RolesNivelOperativo.ListaRolesRequeridos)
                                {
                                    <tr>

                                        <td>
                                            @*
                                            @Html.ActionLink(item.NombreRolPuesto, "CrearBrechasParaDependencia", new { id = item.IdDependencia }, new { onclick = "espera()"})
                                            *@

                                            @Html.DisplayFor(modelItem => item.NombreRolPuesto)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.Cantidad)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.Descripcion)
                                        </td>

                                    </tr>
                            }
                                </tbody>
                            </table>


                        </div>
                        <!-- end widget content -->

                    </div>
                    <!-- end widget div -->

                </div>

            </article>

        </div>
        <!-- end row -->
        <!-- end row -->
    </section>
    <!-- end widget grid -->
</div>
<!-- END MAIN CONTENT -->

@section Scripts {
    <script src='~/js/datatables/init.js'></script>

    <link rel="stylesheet" href="~/lib/waitMe/waitMe.min.css" />
    <link rel="stylesheet" href="~/lib/waitMe/waitMe.css" />

    <script src='~/lib/waitMe/waitMe.min.js'></script>
    <script src='~/js/site.js'></script>

    <script type="text/javascript">
        function espera() {

            mostrarLoadingPanel("content", "Cargando...");
        }

        $("#btn_0").css("background-color", "#3276b1");
        $("#btn_0").css("color", "white");

    </script>
}

