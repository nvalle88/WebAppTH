@model bd.webappth.entidades.ViewModels.ViewModelDocumentoIngresoEmpleado

<link rel="stylesheet" href="~/lib/waitMe/waitMe.min.css" />
<link rel="stylesheet" href="~/lib/waitMe/waitMe.css" />
<script src='~/js/site.js'></script>
<script src='~/lib/waitMe/waitMe.min.js'></script>

<!-- MAIN CONTENT -->
<div id="content">

    <!-- widget grid -->
    <section id="widget-grid" class="">

        <!-- START ROW -->
        <div class="row">
            <!-- NEW COL START -->
            <article class="col-sm-12 col-md-12 col-lg-12">
                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget" id="wid-id-1" data-widget-editbutton="false" data-widget-custombutton="false">

                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2> Check List Documentos de Ingreso Empleado</h2>
                    </header>
                    <!-- widget div-->
                    <div>

                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->

                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body no-padding">

                            <form asp-action="DocumentoEntregado" asp-controller="DocumentosIngreso" novalidate="novalidate">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="empleadoViewModel.IdEmpleado" />
                                <br>
                                <div class="row">
                                    <article class="col-lg-12">
                                        <legend>Empleado</legend>
                                        <div class="row">
                                            <div class="col-sm-6">
                                                <div class="form-group">
                                                    <label>Nombre Empleado:</label>
                                                    <div class="input-group">
                                                        <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                                        <input asp-for="empleadoViewModel.NombreApellido" disabled="disabled" type="text" class="form-control input datepicker " placeholder="Fecha: " data-dateformat='dd/mm/yy' data-msg-required='El campo es requerido' data-rule-required='true'>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-sm-6">
                                                <div class="form-group">
                                                    <label>Fecha Ingreso:</label>
                                                    <div class="input-group">
                                                        <span class="input-group-addon"><i class="fa fa-list-alt fa fa-fw"></i></span>
                                                        <input asp-for="empleadoViewModel.FechaIngreso" disabled="disabled" class="form-control input " placeholder="FondoFinanciamiento" type="text" data-msg-required='El campo es requerido' data-rule-required='true'>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-sm-6">
                                                <div class="form-group">
                                                    <label>Cargo:</label>
                                                    <div class="input-group">
                                                        <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                                        <input asp-for="empleadoViewModel.RolPuesto" disabled="disabled" type="text" class="form-control input datepicker " placeholder="Fecha: " data-dateformat='dd/mm/yy' data-msg-required='El campo es requerido' data-rule-required='true'>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-sm-6">
                                                <div class="form-group">
                                                    <label>Fecha Ingreso:</label>
                                                    <div class="input-group">
                                                        <span class="input-group-addon"><i class="fa fa-list-alt fa fa-fw"></i></span>
                                                        <input asp-for="empleadoViewModel.Dependencia" disabled="disabled" class="form-control input " placeholder="FondoFinanciamiento" type="text" data-msg-required='El campo es requerido' data-rule-required='true'>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </article>

                                </div>

                                <legend>Documentos de Ingreso</legend>

                                @foreach (var item in Model.listadocumentosingreso)
                                {
                                    var bandera = false;
                                    @foreach (var item2 in Model.listadocumentosingresoentregado)
                                    {
                                       
                                        @if (item.IdDocumentosIngreso == item2.IdDocumentosIngreso)
                                        {
                                            <div class="col-md-6">
                                                <div class="checkbox-inline">
                                                    <label>
                                                        <input type="checkbox"
                                                               name="DocumentosSeleccionados"
                                                               value="@item.IdDocumentosIngreso" checked="checked" onclick="return false;" /> @item.Descripcion 
                                                               
                                                        </label>
                                                    </div>
                                                </div>

                                            bandera = true;
                                        }                                   

                                    }
                                    if (!bandera)
                                    {
                                        <div class="col-md-6">
                                            <div class="checkbox-inline">
                                                <label>
                                                    <input type="checkbox"
                                                           name="DocumentosSeleccionados"
                                                           value="@item.IdDocumentosIngreso" /> @item.Descripcion
                                                    </label>
                                                </div>
                                            </div>
                                    }
                                }
                                
                                <br />                              
                                <br />
                                <br />
                                <footer>
                                    <input type="submit" value="Guardar" class="btn btn-primary" />
                                    <a asp-action="Search"  asp-controller="DocumentosIngreso" class="btn btn-default">Regresar</a>
                                </footer>
                            </form>
                        </div>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->
                </div>
                <!-- end widget -->

            </article>

        </div>
        <!-- END ROW -->
    </section>
    <!-- end widget grid -->
    <!-- Modal -->

</div>
<!-- END MAIN CONTENT -->
@section Scripts {
    <script src='~/js/datatables/init.js'></script>
}
