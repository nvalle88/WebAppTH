@model bd.webappth.entidades.Negocio.ItinerarioViatico
<div class="row">
    <section class="col col-lg-4">
        <label>Pa&iacute;s de origen:</label>
        <div class="form-group">
            <select id="paisorigen"  class="form-control" asp-items="ViewBag.IdPais" data-msg-required='El campo es requerido' data-rule-required='true'>
                <option value="0" selected="" disabled="">Seleccione</option>
            </select>
        </div>
    </section>
    <section class="col col-lg-4">
        <label>Provincia de origen:</label>
        <div class="form-group">
            <select id="provinciaorigen" class="form-control input" asp-items="ViewBag.IdProvincia" data-msg-required='El campo es requerido' data-rule-required='true'>
                <option value="0" selected="" disabled="">Seleccione</option>
            </select>
        </div>
    </section>
    <section class="col col-lg-4">
        <label>Ciudad de origen:</label>
        <div class="form-group">
            <select id="ciudadorigen" asp-for="IdCiudadOrigen" class="form-control input" asp-items="ViewBag.IdCiudad" data-msg-required='El campo es requerido' data-rule-required='true'>
                <option value="0" selected="" disabled="">Seleccione</option>
            </select>
        </div>
    </section>
</div>
<div class="row">
    <section class="col col-lg-4">
        <label>Pa&iacute;s de destino:</label>
        <div class="form-group">
            <select id="paisdestino"  class="form-control" asp-items="ViewBag.IdPais" data-msg-required='El campo es requerido' data-rule-required='true'>
                <option value="0" selected="" disabled="">Seleccione</option>
            </select>
        </div>
    </section>
    <section class="col col-lg-4">
        <label>Provincia de destino:</label>
        <div class="form-group">
            <select id="provinciadestino"  class="form-control input" asp-items="ViewBag.IdProvincia" data-msg-required='El campo es requerido' data-rule-required='true'>
                <option value="0" selected="" disabled="">Seleccione</option>
            </select>
        </div>
    </section>
    <section class="col col-lg-4">
        <label>Ciudad de destino:</label>
        <div class="form-group">
            <select id="ciudaddestino" asp-for="IdCiudadDestino" class="form-control input" asp-items="ViewBag.IdCiudad" data-msg-required='El campo es requerido' data-rule-required='true'>
                <option value="0" selected="" disabled="">Seleccione</option>
            </select>
        </div>
    </section>
</div>
<div class="row">
    <section class="col col-4">
        <label>Tipo de transporte:</label>
        <label class="input">
            <select id="IdTipoTransporte" asp-for="IdTipoTransporte" class="form-control input " asp-items="ViewBag.IdTipoTransporte" data-msg-required='El campo es requerido' data-rule-required='true'>
                <option value="0" selected="" disabled="">Seleccione</option>
            </select>
        </label>
    </section>
    <section class="col col-4">
        <label>Fecha de salida:</label>
        <label class="input">
            <input id="FechaSalida" asp-for="FechaDesde" type="text" readonly="readonly" class=" form-control datepicker" data-dateformat='dd/mm/yy'>
            <span asp-validation-for="FechaDesde" class="text-danger"></span>
        </label>
    </section>
    <section class="col col-4">
        <label>Hora de salida:</label>
        <label class="input">
            <input type="time" asp-for="HoraSalida" class="form-control input " data-msg-required='El campo es requerido' data-rule-required='true'>
            <span asp-validation-for="HoraSalida" class="text-danger"></span>
        </label>
    </section>
</div>
<div class="row">
    <section class="col col-4">
        <label>Fecha de llegada:</label>
        <label class="input">
            <input id="FechaLlegada" asp-for="FechaHasta" type="text" readonly="readonly" class=" form-control datepicker" data-dateformat='dd/mm/yy'>
            <span asp-validation-for="FechaHasta" class="text-danger"></span>
        </label>
    </section>
    <section class="col col-4">
        <label>Hora de llegada:</label>
        <label class="input">
            <input type="time" asp-for="HoraLlegada" class="form-control input  " data-msg-required='El campo es requerido' data-rule-required='true'>
            <span asp-validation-for="HoraLlegada" class="text-danger"></span>
        </label>
    </section>    
</div>
