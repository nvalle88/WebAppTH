@model bd.webappth.entidades.ViewModels.AntecedentesFamiliaresViewModel
@using bd.webappth.entidades.Negocio
<link href="~/css/tabla/table.css" rel="stylesheet" />


@{
    ViewData["Title"] = "Antecedentes familiares";
}

@{
    var mficha = new FichaMedica();

    mficha = Model.fichaMedica;
}


<!-- MAIN CONTENT -->
<div id="content">

    @{await Html.RenderPartialAsync("../FichasMedicas/_PartialViewMenu", mficha);}

    <br />
    &nbsp;

    <div class="col col-10">
        @if (@ViewData["Error"].ToString() != "")

        {

            <div class="col-lg-12">
                <div class="alert alert-block alert-dismissable">
                    <a class="close" data-dismiss="alert" href="#"><p>X</p></a>
                    <h4 class="alert-heading"><i class="fa fa-check-square-o"></i>Informaci&oacute;n!</h4>
                    <p>
                        <span class="text-danger"><strong><bold> @ViewData["Error"]</bold></strong></span>
                    </p>
                </div>
            </div>

        }
    </div>

    <p></p>



    <div style="">
        <form asp-action="CreateAntecedenteFamiliar2" id="checkout-form"  novalidate="novalidate">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="fichaMedica.IdFichaMedica" style="width:100px;" />
            <input type="hidden" asp-for="fichaMedica.IdPersona" style="width:100px;" />

            <button type="submit" class="btn btn-labeled btn-default" style="width:100px;" onclick="espera()">
                <span class="btn-label" >
                    <i class="glyphicon glyphicon-plus"></i>
                </span>Nuevo&nbsp;

            </button>
        </form>

    </div>

    <p> </p>

    <!-- widget grid -->
    <section id="" class="">
        <!-- row -->
        <div class="row">
            <!-- NEW WIDGET START -->
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-editbutton="false">
                    <!-- widget options:
                    usage: <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false">

                    data-widget-colorbutton="false"
                    data-widget-editbutton="false"
                    data-widget-togglebutton="false"
                    data-widget-deletebutton="false"
                    data-widget-fullscreenbutton="false"
                    data-widget-custombutton="false"
                    data-widget-collapsed="true"
                    data-widget-sortable="false"

                    -->
                    <header id="table">
                        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                        <h2>Antecedentes familiares</h2>
                    </header>
                    <!-- widget div-->
                    <div>
                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->
                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body no-padding">
                            <table id="datatable_fixed_column" class="table table-striped table-bordered table-hover" width="100%">
                                <thead>

                                    <tr>
                                        <th data-class="expand">
                                            @Html.DisplayNameFor(model => model.ListaAntecedentesFamiliares.FirstOrDefault().FichaMedica.IdFichaMedica)
                                        </th>

                                        <th data-class="expand">
                                            @Html.DisplayNameFor(model => model.ListaAntecedentesFamiliares.FirstOrDefault().Parentesco)
                                        </th>

                                        <th data-class="expand">
                                            @Html.DisplayNameFor(model => model.ListaAntecedentesFamiliares.FirstOrDefault().Enfermedad)
                                        </th>

                                        <th data-class="expand">
                                            @Html.DisplayNameFor(model => model.ListaAntecedentesFamiliares.FirstOrDefault().Observaciones)
                                        </th>


                                        <th>Opciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.ListaAntecedentesFamiliares)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.IdFichaMedica)
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.Parentesco)
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.Enfermedad)
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.Observaciones)
                                            </td>

                                            <td>

                                                @Html.ActionLink("Editar", "EditarAntecedenteFamiliar", new { id = item.IdAntecedentesFamiliares, idFM = item.IdFichaMedica } , new { onclick = "espera()"} ) |
                                                @Html.ActionLink("Eliminar", "DeleteAntecedenteFamiliar", new { id = item.IdAntecedentesFamiliares, idFM = item.IdFichaMedica }, new { onclick = "return confirm('Desea eliminar el registro ?');" })
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->
                </div>

            </article>
            <!-- WIDGET END -->
        </div>
        <!-- end row -->
        <!-- end row -->
    </section>
    <!-- end widget grid -->
</div>
<!-- END MAIN CONTENT -->

@section Scripts {
    <script src='~/js/datatables/init.js'></script>

    <link rel="stylesheet" href="~/lib/waitMe/waitMe.min.css" />
    <link rel="stylesheet" href="~/lib/waitMe/waitMe.css" />

    <script src='~/lib/waitMe/waitMe.min.js'></script>
    <script src='~/js/site.js'></script>

    <script>

        onload = function () {
            
            $("#btn_3").css("background-color", "#3276b1");
            $("#btn_3").css("color", "white");
        }

    </script>
}

