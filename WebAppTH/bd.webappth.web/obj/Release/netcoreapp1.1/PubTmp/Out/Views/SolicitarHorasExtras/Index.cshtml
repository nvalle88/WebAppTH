@model List<bd.webappth.entidades.Negocio.SolicitudHorasExtras>

    @{
        ViewData["Title"] = "Index";
    }
    <!-- MAIN CONTENT -->
<div id="content">
    <div class="col col-10">
        @if (@ViewData["Error"].ToString() != "")

        {

            <div class="col-lg-12">
                <div class="alert alert-block alert-dismissable">
                    <a class="close" data-dismiss="alert" href="#"><p>X</p></a>
                    <h4 class="alert-heading"><i class="fa fa-check-square-o"></i>Informaci&oacute;n!</h4>
                    <p>
                        <span class="text-danger"><strong><bold> @ViewData["Error"]</bold></strong></span>
                    </p>
                </div>
            </div>

        }
    </div>
    <p></p>
    <a asp-action="Create">
        <button type="button" asp-action="Create" class="btn btn-labeled btn-default">
            <span class="btn-label">
                <i class="glyphicon glyphicon-plus"></i>
            </span>Nueva Solicitud Horas Extra

        </button>
    </a>
    <p> </p>

    <!-- widget grid -->
    <section id="widget-grid" class="">
        <!-- row -->
        <div class="row">
            <!-- NEW WIDGET START -->
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-editbutton="false">
                    <!-- widget options:
                    usage: <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false">

                    data-widget-colorbutton="false"
                    data-widget-editbutton="false"
                    data-widget-togglebutton="false"
                    data-widget-deletebutton="false"
                    data-widget-fullscreenbutton="false"
                    data-widget-custombutton="false"
                    data-widget-collapsed="true"
                    data-widget-sortable="false"

                    -->
                    <header>
                        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                        <h2>Solicitudes Horas Extra</h2>
                    </header>
                    <!-- widget div-->
                    <div>
                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->
                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body no-padding">
                            <table id="datatable_fixed_column" class="table table-striped table-bordered table-hover" width="100%">
                                <thead>
                                    <tr>
                                        <th class="hasinput">
                                            <input type="text" class="form-control" placeholder="Buscar" />
                                        </th>
                                        <th class="hasinput">
                                            <input type="text" class="form-control" placeholder="Buscar" />
                                        </th>
                                        <th class="hasinput">
                                            <input type="text" class="form-control" placeholder="Buscar" />
                                        </th>
                                        <th class="hasinput">
                                            <input type="text" class="form-control" placeholder="Buscar" />
                                        </th>
                                        <th class="hasinput">
                                            <input type="text" class="form-control" placeholder="Buscar" />
                                        </th>
                                        <th class="hasinput">
                                            <input type="text" class="form-control" placeholder="Buscar" />
                                        </th>
                                        <th></th>
                                    </tr>
                                    <tr>

                                        <th data-class="expand">
                                            @Html.DisplayNameFor(model => model.FirstOrDefault().FechaSolicitud)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.FirstOrDefault().Fecha)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.FirstOrDefault().CantidadHoras)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.FirstOrDefault().Estado)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.FirstOrDefault().Observaciones)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.FirstOrDefault().EsExtraordinaria)
                                        </th>
                                        <th>Opciones</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in Model)
                                    {
                                        var Estado = "";
                                        <tr>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.FechaSolicitud)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Fecha)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CantidadHoras)
                                            </td>


                                            @if (item.Estado == 0)
                                            {
                                                Estado = "Pendiente";
                                            }
                                            else if (item.Estado == 1)
                                            {
                                                Estado = "Aprobado";
                                            }
                                            else
                                            {
                                                Estado = "Negado";
                                            }
                                            <td>
                                                @Html.DisplayFor(modelItem => Estado)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Observaciones)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.EsExtraordinaria)
                                            </td>
                                            @if (item.Estado == 0)
                                            {
                                                <td>
                                                    @Html.ActionLink("Editar", "Edit", new { id = item.IdSolicitudHorasExtras }) |
                                                    @Html.ActionLink("Eliminar", "Delete", new { id = item.IdSolicitudHorasExtras }, new { onclick = "return confirm('Desea eliminar  la solicitud de horas extra... ?');" })

                                                </td>
                                            }
                                            else
                                            {
                            <td>
                                @Html.ActionLink("Eliminar", "Delete", new { id = item.IdSolicitudHorasExtras }, new { onclick = "return confirm('Desea eliminar  la solicitud de horas extra... ?');" })
                            </td>
                        }
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->
                </div>

            </article>
            <!-- WIDGET END -->
        </div>
        <!-- end row -->
        <!-- end row -->
    </section>
    <!-- end widget grid -->
</div>
    <!-- END MAIN CONTENT -->

    @section Scripts {
        <script src='~/js/datatables/init.js'></script>
    }

