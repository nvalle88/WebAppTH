
@model bd.webappth.entidades.Utils.MenuFichaCandidato
@using Microsoft.AspNetCore.Http;
@using Microsoft.AspNetCore.Mvc;
@using Microsoft.AspNetCore.Mvc.Rendering;
@using bd.webappth.entidades.Constantes;
   
   @{
       var a = @Context.Session.GetInt32(Constantes.idCandidatoSession);
    }
<div class="btn-group btn-group-justified">
    @if (Model.OpcionMenu == 0)
    {
        <a asp-action="Detalle" asp-controller="FichaCandidatos"  asp-route-idCandidato="@a"  onclick="cargando()" style="background-color:#3276b1;color:white;" class="btn btn-default"> Datos del candidato </a>
    }
    else
    {
        <a asp-action="Detalle" asp-controller="FichaCandidatos" asp-route-idCandidato="@a" onclick="cargando()" class="btn btn-default"> Datos del candidato </a>
    }


    @if (Model.OpcionMenu == 1)
    {
        <a href="@Url.Action("IndexPersonaEstudio", "FichaCandidatos")" onclick="cargando()" style="background-color:#3276b1;color:white;" class="btn btn-default">Formaci&oacute;n <br /> Acad&eacute;mica </a>

    }
    else
    {
        <a href="@Url.Action("IndexPersonaEstudio", "FichaCandidatos")" onclick="cargando()" class="btn btn-default">Formaci&oacute;n <br /> Acad&eacute;mica </a>


    }

    @if (Model.OpcionMenu == 2)
    {
        <a href="@Url.Action("IndexTrayectoriaLaboral", "FichaCandidatos")" onclick="cargando()" style="background-color:#3276b1;color:white;" class="btn btn-default">Trayectoria <br /> Laboral</a>


    }
    else
    {
        <a href="@Url.Action("IndexTrayectoriaLaboral", "FichaCandidatos")" onclick="cargando()" class="btn btn-default">Trayectoria <br /> Laboral</a>

    }
</div>
