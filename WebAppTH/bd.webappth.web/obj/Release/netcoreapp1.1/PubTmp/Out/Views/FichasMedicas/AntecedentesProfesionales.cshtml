@model bd.webappth.entidades.Negocio.FichaMedica
@using bd.webappth.entidades.Negocio;


@{
    ViewData["Title"] = "Antecedentes profesionales";
}


<style>
    .contenedor-seccion {
        background-color: transparent;
        width: 30%;
        min-height: 50px;
        float: left;
    }

    .espacio-seccion {
        background-color: transparent;
        min-height: 50px;
        width: 20%;
        float: left;
    }

    .titulo {
        background-color: #cbd2d5;
        color: black;
        padding-left: 1%;
    }

    .contenedor-seccion2 {
        margin-left: 0%;
        margin-right: 0%;
        color: black;
        font-size: 15px;
        float: none;
    }

    .columna1 {
        padding-left: 2%;
        width: 18%;
        height: 27px;
        /*background-color: rgba(142,194,219,1);*/
        float: left;
    }

    .columna2 {
        width: 10%;
        height: 27px;
        float: left;
        /*background-color: rgba(142,194,219,0.7);*/
        text-align: center;
    }

    .columna3 {
        width: 10%;
        height: 27px;
        float: left;
        /*background-color: rgba(142,194,219,1);*/
        text-align: center;
    }

    .columna4 {
        width: 58%;
        height: 27px;
        padding-left: 2%;
        /*background-color: rgba(142,194,219,0.7);*/
        float: right;
    }

        .columna4 input {
            height: 23px;
        }
</style>


<!-- MAIN CONTENT -->
<div id="content">

    @{await Html.RenderPartialAsync("_PartialViewMenu", Model);}

    <br />
    &nbsp;

    <div class="col col-10">
        @if (@ViewData["Error"].ToString() != "")

        {

            <div class="col-lg-12">
                <div class="alert alert-block alert-dismissable">
                    <a class="close" data-dismiss="alert" href="#"><p>X</p></a>
                    <h4 class="alert-heading"><i class="fa fa-check-square-o"></i>Informaci&oacute;n!</h4>
                    <p>
                        <span class="text-danger"><strong><bold> @ViewData["Error"]</bold></strong></span>
                    </p>
                </div>
            </div>

        }
    </div>

    <!-- widget grid -->
    <section id="" class="">

        <!-- START ROW -->
        <div class="row">
            <!-- NEW COL START -->
            <article class="col-sm-12 col-md-12 col-lg-12">
                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget" id="wid-id-1" data-widget-editbutton="false" data-widget-custombutton="false">
                    <!--
                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2>Hábitos</h2>
                    </header>
                    -->
                    <!-- widget div-->
                    <div>

                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->

                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body no-padding">

                            <form asp-action="AntecedentesProfesionales" id="checkout-form" class="smart-form" novalidate="novalidate">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <fieldset>


                                    <input type="hidden" asp-for="IdPersona" /><input type="hidden" asp-for="IdFichaMedica" />


                                    <article class="col col-lg-12">

                                        <legend>
                                            <div class="contenedor-cabecera">
                                                <div class="titulo">Antecedentes de accidentes o enfermedades profesionales</div>

                                            </div>
                                        </legend>

                                        <section class="fondo-seccion">

                                            <section>

                                                <br />

                                                <div class="contenedor-seccion">

                                                    <p>@Html.DisplayNameFor(model => model.AccidenteTrabajo)</p>

                                                    Si &nbsp;<label onclick="mostrarAccidenteTrabajoSeccion()" />@Html.RadioButtonFor(x => x.AccidenteTrabajo, true) &emsp;</label>
                                                    No &nbsp;<label onclick="ocultarAccidenteTrabajoSeccion()" />@Html.RadioButtonFor(x => x.AccidenteTrabajo, false, htmlAttributes: new { @checked = true })</label>


                                                </div>

                                                <div class="contenedor-seccion">

                                                    <label class="input">

                                                        <p>@Html.DisplayNameFor(model => model.FechaAccidente)</p>

                                                        <input type="date" style="width:260px;" asp-for="FechaAccidente"  data-dateformat='dd/mm/yy' />
                                                        <span asp-validation-for="FechaAccidente" class="text-danger"></span>
                                                    </label>
                                                </div>

                                                <div class="contenedor-seccion">

                                                    <label class="input">
                                                        <p>@Html.DisplayNameFor(model => model.EmpresaAccidente)</p>

                                                        <input maxlength="150" asp-for="EmpresaAccidente" class="form-control"  />
                                                        <span asp-validation-for="EmpresaAccidente" class="text-danger"></span>
                                                    </label>

                                                    <br />

                                                </div>

                                            </section>

                                        </section>

                                        <section class="fondo-seccion">

                                            <div class="contenedor-seccion">

                                                <p>@Html.DisplayNameFor(model => model.EnfermedadProfesional)</p>

                                                Si &nbsp;<label onclick="mostrarEnfermedadProfesionalSeccion()" />@Html.RadioButtonFor(x => x.EnfermedadProfesional, true)&emsp;</label>
                                                No &nbsp;<label onclick="ocultarEnfermedadProfesionalSeccion()" />@Html.RadioButtonFor(x => x.EnfermedadProfesional, false, htmlAttributes: new { @checked = true })</label>

                                            </div>

                                            <div class="contenedor-seccion">

                                                <label class="input">
                                                    <p>@Html.DisplayNameFor(model => model.FechaDiagnostico)</p>

                                                    <input type="date" style="width:260px;" asp-for="FechaDiagnostico"  data-dateformat='dd/mm/yy' />
                                                    <span asp-validation-for="FechaDiagnostico" class="text-danger"></span>
                                                </label>
                                            </div>

                                            <div class="contenedor-seccion">
                                                <label class="input">
                                                    <p>@Html.DisplayNameFor(model => model.EmpresaEnfermedad)</p>

                                                    <input maxlength="150" asp-for="EmpresaEnfermedad" class="form-control"  />
                                                    <span asp-validation-for="EmpresaEnfermedad" class="text-danger"></span>
                                                </label>

                                                <br />

                                            </div>


                                        </section>

                                        <section class="fondo-seccion" id="DetalleAntecedenteProfesional">

                                            <div class="contenedor-seccion">

                                                <p>@Html.DisplayNameFor(model => model.DetalleAccidenteEnfermedadOcupacional)</p>
                                                <textarea maxlength="500" asp-for="DetalleAccidenteEnfermedadOcupacional" class="form-control"  rows="4" style="resize:none;"></textarea>
                                                <span asp-validation-for="DetalleAccidenteEnfermedadOcupacional" class="text-danger"></span>

                                                <br />

                                            </div>

                                        </section>

                                    </article>






                                </fieldset>

                                <footer>
                                    <input type="submit" value="Guardar" class="btn btn-default" onclick="espera()"/>
                                    <a asp-action="Index" asp-route-idPersona="@Model.IdPersona" class="btn btn-default" onclick="espera()">Cancelar</a>
                                </footer>
                            </form>
                        </div>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->
                </div>
                <!-- end widget -->

            </article>



        </div>
        <!-- END ROW -->
    </section>
    <!-- end widget grid -->
    <!-- Modal -->

</div>
<!-- END MAIN CONTENT -->
@section Scripts {

    <link rel="stylesheet" href="~/lib/waitMe/waitMe.min.css" />
    <link rel="stylesheet" href="~/lib/waitMe/waitMe.css" />

    <script src='~/lib/waitMe/waitMe.min.js'></script>
    <script src='~/js/site.js'></script>

    <script type="text/javascript">


        onload = function () {


            $("#btn_1").css("background-color", "#3276b1");
            $("#btn_1").css("color", "white");

        }

    </script>
}
