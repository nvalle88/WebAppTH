@model bd.webappth.entidades.Negocio.TipoConcurso
<fieldset>
    <div class="row">
        <section class="col col-8">
            <label class="input">
                <i class="icon-append fa fa-comment"></i>
                <input maxlength="32" asp-for="Nombre" class="form-control" placeholder="@Html.DisplayNameFor(model=>model.Nombre)" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </label>
            <label class="input">
                <i class="icon-append fa fa-comment"></i>
                <textarea rows="3" asp-for="Descripcion" class="form-control" placeholder="@Html.DisplayNameFor(model=>model.Descripcion)"></textarea>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </label>
        </section>
    </div>

</fieldset>