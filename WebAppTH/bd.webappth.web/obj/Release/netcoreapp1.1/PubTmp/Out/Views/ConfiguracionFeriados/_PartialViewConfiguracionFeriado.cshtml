@model bd.webappth.entidades.Negocio.ConfiguracionFeriados

<fieldset>
    <div class="row">
        <section class="col col-4">
            <label>@Html.DisplayNameFor(model => model.Nombre)</label>
            <label class="input">
                <input maxlength="32" asp-for="Nombre" class="form-control" placeholder="@Html.DisplayNameFor(model=>model.Nombre)" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </label>
        </section>
        <section class="col col-4">
            <label>@Html.DisplayNameFor(model => model.FechaDesde)</label>
            <label class="input">
                <input asp-for="FechaDesde" type="text" placeholder="Seleccione fecha desde" class="datepicker" data-dateformat='dd/mm/yy'>
            </label>
        </section>
        <section class="col col-4">
            <label>@Html.DisplayNameFor(model => model.FechaHasta)</label>
            <label class="input">
                <input asp-for="FechaHasta" type="text" placeholder="Seleccione fecha hasta" class="datepicker" data-dateformat='dd/mm/yy'>
            </label>
        </section>
    </div>
<section>
    <label class="label">@Html.DisplayNameFor(model => model.Descripcion)</label>
    <label class="textarea">
        <textarea maxlength="250"  asp-for="Descripcion" rows="3" placeholder="@Html.DisplayNameFor(model=>model.Descripcion)"></textarea>
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </label>
</section>
</fieldset>