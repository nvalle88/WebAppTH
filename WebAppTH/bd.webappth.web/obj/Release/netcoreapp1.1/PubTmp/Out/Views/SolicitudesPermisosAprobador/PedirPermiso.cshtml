@model bd.webappth.entidades.ViewModels.SolicitudPermisoViewModel

@{
    ViewData["Title"] = "Permisos";
}

<link rel="stylesheet" href="~/lib/select2/dist/css/select2.min.css" />

			<!-- MAIN CONTENT -->
<div id="content">

    <!-- widget grid -->
    <section id="widget-grid" class="">

        <!-- START ROW -->
        <div class="row">
            <!-- NEW WIDGET START -->
            <article class="col-lg-12">
                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget" id="wid-id-0" data-widget-colorbutton="false" data-widget-editbutton="false">
                    <!-- widget options:
                usage: <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false">

                data-widget-colorbutton="false"
                data-widget-editbutton="false"
                data-widget-togglebutton="false"
                data-widget-deletebutton="false"
                data-widget-fullscreenbutton="false"
                data-widget-custombutton="false"
                data-widget-collapsed="true"
                data-widget-sortable="false"

                -->
                    <header>
                        <span class="widget-icon"> <i class="fa fa-calendar"></i> </span>
                        <h2>Control de salida de personal en horas de oficina</h2>
                    </header>
                    <!-- widget div-->
                    <div>
                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->
                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <footer class="widget-body">

                            <form  id="frmSolicitarPermisos"  asp-action="PedirPermiso" class="smart-form" novalidate="novalidate">
                                <input type="hidden" asp-for="SolicitudPermiso.Empleado.IdEmpleado" />
                                <input type="hidden" asp-for="NombresApellidosEmpleado" />
                                <input type="hidden" asp-for="NombreDependencia" />

                                @{await Html.RenderPartialAsync("_PartialViewPedirPermiso", Model);}

                                <footer>

                                    <input class="btn btn-default" type="submit" id="btnPedirPermiso" value="Guardar" onclick="espera()">
                                    <input class="btn btn-default" asp-action="IndexEmpleado" type="submit" value="Cancelar" onclick="espera()">

                                </footer>
                                
                            </form>
                        </div>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->
                </div>
                <!-- end widget -->
                <!-- Widget ID (each widget will need unique ID)-->
               
            </article>
            <!-- WIDGET END -->
            <!-- NEW WIDGET START -->
         
            <!-- WIDGET END -->
        </div>
        <!-- END ROW -->
    </section>
    <!-- end widget grid -->
    <!-- Modal -->
   
</div>
<!-- END MAIN CONTENT -->
@section Scripts {
    
<script src='~/lib/select2/dist/js/select2.min.js'></script>
<script src='~/lib/select2/dist/js/i18n/es.js'></script>
<script src='~/js/site.js'></script>
<script>

    $(document).ready(function () {
                Init_Select2();
    });

    function espera() {

        mostrarLoadingPanel("content", "Cargando...");
    }

</script>

}
