@model bd.webappth.entidades.Negocio.Rubro
<fieldset>
    <div class="row">
        <section class="col col-8">
            <label class="input">
                <i class="icon-prepend fa fa-user"></i>
                <input maxlength="50" asp-for="Nombre" class="form-control" placeholder="@Html.DisplayNameFor(model=>model.Nombre)" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </label>
        </section>
    </div>

    <div class="row">
        <section class="col col-8">
            <label class="input">
                <input maxlength="12" asp-for="TasaPorcentualMaxima" onkeypress="return NumCheck(event, this)" class="form-control" placeholder="@Html.DisplayNameFor(model=>model.TasaPorcentualMaxima)" />
            </label>
        </section>
    </div>

</fieldset>