@model bd.webappth.entidades.Negocio.TipoCertificado
<fieldset>
    <div class="row">
        <section class="col col-10">
            <label class="input">
                <i class="icon-append fa fa-check"></i>
                <input maxlength="32" asp-for="Nombre" class="form-control" placeholder="@Html.DisplayNameFor(model=>model.Nombre)" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </label>
        </section>
        <section>
            <label class="col col-10">
                <label class="label"></label>
                <label class="textarea">
                    <i class="icon-append fa fa-comments"></i>
                    <textarea rows="3" asp-for="Descripcion" class="form-control" placeholder="@Html.DisplayNameFor(model=>model.Descripcion)"></textarea>
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </label>
            </label>
        </section>
    </div>

</fieldset>