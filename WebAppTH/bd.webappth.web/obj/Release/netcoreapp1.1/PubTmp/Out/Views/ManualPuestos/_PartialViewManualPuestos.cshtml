@model bd.webappth.entidades.ViewModels.ViewModelManualPuesto

<div id="content">
    <div class="row">
        <article class="col-lg-12">
            <section class="col sm-4">
                <div class="form-group">
                    <label class="input-group" style="border:none">Nombre</label>
                    <div class="input-group" style="width:100%;">
                        <input asp-for="ManualPuesto.Nombre" class="form-control input " placeholder="Nombre" type="text">
                    </div>
                </div>
            </section>
        </article>
    </div>
    <section>
        <label class="label"></label>
        <div class="form-group">
            <label class="input-group" style="border:none">Descripci&oacute;n</label>
            <div class="input-group" style="width:100%;">
                <textarea maxlength="250" class="form-control" asp-for="ManualPuesto.Descripcion" rows="3" placeholder="@Html.DisplayNameFor(model=>model.ManualPuesto.Descripcion)"></textarea>
                <span asp-validation-for="ManualPuesto.Descripcion" class="text-danger"></span>
            </div>
        </div>
    </section>
    <section>
        <label class="label"></label>
        <div class="form-group">
            <label class="input-group" style="border:none">Misi&oacute;n</label>
            <div class="input-group" style="width:100%;">
                <textarea maxlength="1000" class="form-control" asp-for="ManualPuesto.Mision" rows="3" placeholder="@Html.DisplayNameFor(model=>model.ManualPuesto.Mision)"></textarea>
                <span asp-validation-for="ManualPuesto.Mision" class="text-danger"></span>
            </div>
        </div>
    </section>



    <link href="~/css/tabla/table.css" rel="stylesheet" />
    <!-- widget grid -->
    <section id="" class="">
        <!-- row -->
        <div class="row">
            <!-- NEW WIDGET START -->
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-editbutton="false">

                    <header id="table">
                        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                        <h2>Relaciones internas y externas</h2>
                    </header>
                    <!-- widget div-->
                    <div>
                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->
                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body no-padding">
                            <table id="dt_basic" class="table table-striped table-bordered table-hover" width="100%">
                                <thead>
                                    <tr>

                                        @*<th data-class="expand">
                                                @Html.DisplayNameFor(model => model.RelacionesInternasExternas.FirstOrDefault().Nombre)
                                            </th>*@
                                        <th>
                                            @Html.DisplayNameFor(model => model.RelacionesInternasExternas.FirstOrDefault().Descripcion)
                                        </th>
                                        <th>
                                            Selecci&oacute;n
                                        </th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.RelacionesInternasExternas)
                                    {
                                        <tr>

                                            @*<td>
                                                    @Html.DisplayFor(modelItem => item.Nombre)
                                                </td>*@
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Descripcion)
                                            </td>
                                            <td>
                                                @if (Model.ManualPuesto == null)
                                                {
                                                    @if (Model.RelacionesInternasExternas.FirstOrDefault().IdRelacionesInternasExternas == item.IdRelacionesInternasExternas)
                                                    {
                                                        <label class="radio radio-inline">
                                                            <input type="radio" checked="checked" name="ManualPuesto.IdRelacionesInternasExternas" value="@item.IdRelacionesInternasExternas" class="radio">

                                                        </label>
                                                    }
                                                    else
                                                    {
                                                        <label class="radio radio-inline">
                                                            <input type="radio" name="ManualPuesto.IdRelacionesInternasExternas" value="@item.IdRelacionesInternasExternas" class="radio">

                                                        </label>
                                                    }

                                                }
                                                else
                                                {


                                                    @if (Model.ManualPuesto.IdRelacionesInternasExternas == item.IdRelacionesInternasExternas)
                                                    {
                                                        <label class="radio radio-inline">
                                                            <input type="radio" checked="checked" name="ManualPuesto.IdRelacionesInternasExternas" value="@item.IdRelacionesInternasExternas" class="radio">

                                                        </label>
                                                    }
                                                    else
                                                    {
                                                        <label class="radio radio-inline">
                                                            <input type="radio" name="ManualPuesto.IdRelacionesInternasExternas" value="@item.IdRelacionesInternasExternas" class="radio">

                                                        </label>
                                                    }
                                                }

                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->
                </div>

            </article>
            <!-- WIDGET END -->
        </div>
        <!-- end row -->
        <!-- end row -->
    </section>
    <!-- end widget grid -->

</div>    
